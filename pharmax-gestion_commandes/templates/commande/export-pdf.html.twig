<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Liste des Commandes - Pharmax</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            font-size: 10pt;
            color: #333;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
        }
        .header h1 {
            font-size: 18pt;
            color: #007bff;
            margin-bottom: 5px;
        }
        .header p {
            font-size: 9pt;
            color: #666;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        thead {
            background-color: #f0f0f0;
            border-bottom: 2px solid #007bff;
        }
        th {
            padding: 8px;
            text-align: left;
            font-weight: bold;
            border: 1px solid #ddd;
        }
        td {
            padding: 8px;
            border: 1px solid #ddd;
        }
        tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }
        tbody tr:nth-child(even) {
            background-color: #fff;
        }
        .badge {
            display: inline-block;
            padding: 3px 6px;
            border-radius: 3px;
            font-size: 8pt;
            font-weight: bold;
        }
        .badge-info {
            background-color: #d1ecf1;
            color: #0c5460;
        }
        .badge-primary {
            background-color: #cfe2ff;
            color: #084298;
        }
        .badge-success {
            background-color: #d1e7dd;
            color: #0f5132;
        }
        .badge-warning {
            background-color: #fff3cd;
            color: #664d03;
        }
        .badge-danger {
            background-color: #f8d7da;
            color: #842029;
        }
        .footer {
            margin-top: 20px;
            text-align: center;
            font-size: 8pt;
            color: #999;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }
        .no-data {
            text-align: center;
            padding: 20px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>PHARMAX - Liste des Commandes</h1>
        <p>Généré le {{ "now"|date('d/m/Y H:i:s') }}</p>
    </div>

    {% if commandes is empty %}
        <div class="no-data">
            <p>Aucune commande trouvée.</p>
        </div>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th style="width:8%">ID</th>
                    <th style="width:18%">Utilisateur</th>
                    <th style="width:25%">Produits</th>
                    <th style="width:12%">Totales</th>
                    <th style="width:15%">Statut</th>
                    <th style="width:12%">Date</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                    <tr>
                        <td>#{{ commande.id }}</td>
                        <td>{{ commande.utilisateur ? commande.utilisateur.email : 'N/A' }}</td>
                        <td>
                            {% if commande.produits is iterable %}
                                {% for produit in commande.produits %}
                                    {% if produit is iterable %}
                                        <span class="badge badge-info">{{ produit.nom ?? 'Produit' }} (x{{ produit.quantite ?? 1 }})</span>
                                    {% else %}
                                        <span class="badge badge-info">{{ produit }}</span>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                {{ commande.produits|default('N/A') }}
                            {% endif %}
                        </td>
                        <td>{{ commande.totales|number_format(2, ',', ' ') }} TND</td>
                        <td>
                            {% if commande.statut == 'en_cours' %}
                                <span class="badge badge-primary">● En cours</span>
                            {% elseif commande.statut == 'en_attente' %}
                                <span class="badge badge-warning">⏳ En attente</span>
                            {% elseif commande.statut == 'annule' or commande.statut == 'annulée' %}
                                <span class="badge badge-danger">✕ Annulée</span>
                            {% endif %}
                        </td>
                        <td>{{ commande.createdAt|date('d/m/Y') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="footer">
            <p>Total: {{ commandes|length }} commande(s)</p>
        </div>
    {% endif %}
</body>
</html>
