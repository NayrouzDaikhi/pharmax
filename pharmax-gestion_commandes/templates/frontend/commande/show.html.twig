{% extends 'frontend/base.html.twig' %}

{% block title %}Confirmation de Commande - Pharmax{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="alert alert-success mb-4">
            <h4>Commande Confirmée!</h4>
            <p>Votre commande a été enregistrée avec succès.</p>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5>Détails de la Commande</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Numéro:</strong> #{{ commande.id }}
                    </div>
                    <div class="col-md-6">
                        <strong>Date:</strong> {{ commande.createdAt|date('d/m/Y H:i') }}
                    </div>
                </div>

                <hr>

                <h6 class="mb-3">Produits Commandés</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if commande.lignes is not empty %}
                            {% for ligne in commande.lignes %}
                                <tr>
                                    <td>{{ ligne.nom }}</td>
                                    <td>{{ ligne.prix|number_format(2, ',', ' ') }} DT</td>
                                    <td>{{ ligne.quantite }}</td>
                                    <td>{{ ligne.sousTotal|number_format(2, ',', ' ') }} DT</td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            {% for produit in commande.produits %}
                                <tr>
                                    <td>{{ produit.nom }}</td>
                                    <td>{{ produit.prix|number_format(2, ',', ' ') }} DT</td>
                                    <td>{{ produit.quantite }}</td>
                                    <td>{{ produit.sousTotal|number_format(2, ',', ' ') }} DT</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>

                <hr>

                <div class="text-end">
                    <h5 class="text-primary">Total: {{ commande.totales|number_format(2, ',', ' ') }} DT</h5>
                </div>

                {% if qrCode %}
                <hr>
                <div class="text-center">
                    <h6 class="mb-3">Code QR de la Commande</h6>
                    <img src="{{ qrCode }}" alt="QR Code" style="width:150px; height:150px; border:1px solid #ddd; padding:5px;">
                </div>
                {% endif %}
            </div>
        </div>

        <div class="d-flex gap-2">
            <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Continuer les Achats</a>
            <a href="{{ path('app_frontend_commande_index') }}" class="btn btn-outline-primary">Mes Commandes</a>
            <a href="{{ path('app_commande_pdf', {'id': commande.id}) }}" class="btn btn-info ms-auto" target="_blank">
                <i class="bx bx-file me-1"></i> Télécharger la Facture (PDF)
            </a>
        </div>
    </div>
</div>
{% endblock %}
