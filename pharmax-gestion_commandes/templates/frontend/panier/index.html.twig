{% extends 'frontend/base.html.twig' %}

{% block title %}Panier - Pharmax{% endblock %}

{% block content %}
<h1 class="mb-4">Panier</h1>

{% if panier|length == 0 %}
<div class="alert alert-info text-center py-4">
    <p>Votre panier est vide.</p>
    <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Continuer les achats</a>
</div>
{% else %}
<div class="row">
    <div class="col-lg-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Sous-total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% set total = 0 %}
                {% for id, item in panier %}
                {% set subtotal = item.prix * item.quantite %}
                <tr>
                    <td>{{ item.nom }}</td>
                    <td>{{ item.prix|number_format(2, ',', ' ') }} DT</td>
                    <td>{{ item.quantite }}</td>
                    <td>{{ subtotal|number_format(2, ',', ' ') }} DT</td>
                    <td>
                        <a href="{{ path('app_panier_retirer', {'id': id}) }}" class="btn btn-sm btn-secondary">
                            Supprimer
                        </a>
                    </td>
                </tr>
                {% set total = total + subtotal %}
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Résumé</h5>
                <hr>
                <div class="mb-3">
                    <h4 class="text-primary">Total: {{ total|number_format(2, ',', ' ') }} DT</h4>
                </div>

                <form method="POST" action="{{ path('app_panier_commander') }}">
                    <button type="submit" class="btn btn-primary w-100 mb-2">Passer la Commande</button>
                </form>

                <a href="{{ path('app_panier_vider') }}" class="btn btn-outline-primary w-100">Vider le Panier</a>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
