{% extends "base.html.twig" %}

{% block title %}Commande non trouvée - Pharmax{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-body p-5">
                    <h1 class="display-1 text-danger mb-3">404</h1>
                    <h3 class="card-title mb-3">Commande non trouvée</h3>
                    <p class="text-muted mb-4">
                        La commande que vous recherchez n'existe pas ou a été supprimée.
                    </p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-primary">
                            <i class="bx bx-arrow-back me-1"></i> Retourner à la liste
                        </a>
                        <a href="{{ path('app_frontend_produit_index') }}" class="btn btn-secondary">
                            <i class="bx bx-home me-1"></i> Accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
