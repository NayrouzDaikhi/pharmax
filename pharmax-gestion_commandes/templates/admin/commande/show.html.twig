{% extends "admin/base.html.twig" %}

{% block title %}Détail Commande #{{ commande.id }} - Admin{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="fw-bold">
                <span class="text-muted fw-light">Commandes /</span> #{{ commande.id }}
            </h4>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informations de la Commande</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <small class="text-muted">Numéro de commande</small>
                            <div class="fw-bold">#{{ commande.id }}</div>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Date de création</small>
                            <div class="fw-bold">{{ commande.createdAt|date('d/m/Y H:i') }}</div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <small class="text-muted">Statut</small>
                            <div>
                                {% if commande.statut == 'en_cours' %}
                                    <span class="badge bg-primary">En cours</span>
                                {% elseif commande.statut == 'en_attente' %}
                                    <span class="badge bg-warning">En attente</span>
                                {% elseif commande.statut == 'payee' %}
                                    <span class="badge bg-success">Payée</span>
                                {% elseif commande.statut == 'annule' or commande.statut == 'annulée' %}
                                    <span class="badge bg-danger">Annulée</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ commande.statut }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Client</small>
                            <div class="fw-bold">{{ commande.utilisateur ? commande.utilisateur.email : 'Client Anonyme' }}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Détail des Produits</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Produit</th>
                                <th class="text-end">Prix (TND)</th>
                                <th class="text-center">Quantité</th>
                                <th class="text-end">Sous-total (TND)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if commande.lignes is defined and commande.lignes|length > 0 %}
                                {% for ligne in commande.lignes %}
                                    <tr>
                                        <td>{{ ligne.nom }}</td>
                                        <td class="text-end">{{ ligne.prix|number_format(2, ',', ' ') }}</td>
                                        <td class="text-center">{{ ligne.quantite }}</td>
                                        <td class="text-end">{{ ligne.sousTotal|number_format(2, ',', ' ') }}</td>
                                    </tr>
                                {% endfor %}
                            {% elseif commande.produits is iterable %}
                                {% for p in commande.produits %}
                                    <tr>
                                        <td>{{ p.nom ?: p }}</td>
                                        <td class="text-end">{{ p.prix|default(0)|number_format(2, ',', ' ') }}</td>
                                        <td class="text-center">{{ p.quantite|default(1) }}</td>
                                        <td class="text-end">{{ (p.prix|default(0) * p.quantite|default(1))|number_format(2, ',', ' ') }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr><td colspan="4" class="text-center py-3 text-muted">Pas de produit</td></tr>
                            {% endif %}
                        </tbody>
                        <tfoot class="table-light">
                            <tr class="fw-bold">
                                <td colspan="3" class="text-end">Total :</td>
                                <td class="text-end">{{ commande.totales|number_format(2, ',', ' ') }} TND</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            {% if qrCode %}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Code QR</h5>
                </div>
                <div class="card-body text-center">
                    <img src="{{ qrCode }}" alt="QR Code" style="width:200px; height:200px; border:1px solid #ddd; padding:10px;">
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body d-flex flex-column gap-2">
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-primary">
                        <i class="bx bx-edit-alt"></i> Modifier
                    </a>
                    <a href="{{ path('app_commande_pdf', {'id': commande.id}) }}" class="btn btn-info" target="_blank">
                        <i class="bx bx-download"></i> Exporter PDF
                    </a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bx bx-trash"></i> Supprimer
                    </button>
                    <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                        <i class="bx bx-arrow-back"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer cette commande ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="POST" action="{{ path('app_commande_delete', {'id': commande.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
