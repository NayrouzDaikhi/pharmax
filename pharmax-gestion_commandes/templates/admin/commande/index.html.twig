{% extends "admin/base.html.twig" %}

{% block title %}Gestion des Commandes - Backoffice{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Liste des Commandes</h5>
                <a href="{{ path('app_commande_new') }}" class="btn btn-primary btn-sm">+ Nouvelle Commande</a>
            </div>
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Montant</th>
                            <th>Statut</th>
                            <th>Utilisateur</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in commandes %}
                        <tr>
                            <td>#{{ commande.id }}</td>
                            <td>{{ commande.createdAt|date('d/m/Y H:i') }}</td>
                            <td>{{ commande.totales|number_format(2, ',', ' ') }} <strong>TND</strong></td>
                            <td>
                                {% if commande.statut == 'en_cours' %}
                                    <span class="badge bg-primary">En cours</span>
                                {% elseif commande.statut == 'en_attente' %}
                                    <span class="badge bg-warning">En attente</span>
                                {% elseif commande.statut == 'payee' %}
                                    <span class="badge bg-success">Payée</span>
                                {% elseif commande.statut == 'annule' or commande.statut == 'annulée' %}
                                    <span class="badge bg-danger">Annulée</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ commande.statut }}</span>
                                {% endif %}
                            </td>
                            <td>{{ commande.utilisateur ? commande.utilisateur.email : 'Client Anonyme' }}</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="{{ path('app_commande_show', {'id': commande.id}) }}">
                                            <i class="bx bx-eye me-1"></i> Voir
                                        </a>
                                        <a class="dropdown-item" href="{{ path('app_commande_edit', {'id': commande.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i> Modifier
                                        </a>
                                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                            <i class="bx bx-trash me-1"></i> Supprimer
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4">Aucune commande trouvée</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
