{% extends 'base.html.twig' %}

{% block title %}Ajouter une Réponse{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <h4 class="py-3 mb-4">Répondre à la Réclamation</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">{{ reclamation.titre }}</h5>
                    <small class="text-muted d-block mt-1">Réclamation #{{ reclamation.id }}</small>
                </div>
                <div class="card-body bg-light mb-3">
                    <p><strong>Message du client:</strong></p>
                    <p>{{ reclamation.description }}</p>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="mb-3">
                            <label for="contenu" class="form-label">Votre Réponse *</label>
                            <textarea class="form-control" id="contenu" name="contenu" rows="6" required
                                      placeholder="Écrivez votre réponse au client..."></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('admin_reclamation_show', {'id': reclamation.id}) }}" 
                               class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">Envoyer la Réponse</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
