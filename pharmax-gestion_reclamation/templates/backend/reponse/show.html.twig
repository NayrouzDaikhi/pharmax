{% extends 'base.html.twig' %}

{% block title %}Détails Réponse #{{ reponse.id }}{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <a href="{{ path('admin_reponse_index') }}" class="btn btn-secondary mb-3">← Retour</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Réponse #{{ reponse.id }}</h5>
                    <small class="text-muted d-block mt-1">
                        Réclamation: <a href="{{ path('admin_reclamation_show', {'id': reponse.reclamation.id}) }}">{{ reponse.reclamation.titre }}</a>
                    </small>
                </div>
                <div class="card-body">
                    <p><strong>Date d'envoi:</strong> {{ reponse.dateReponse|date('d/m/Y à H:i') }}</p>
                    <hr>
                    <p>{{ reponse.contenu }}</p>
                </div>
                <div class="card-footer bg-transparent d-flex gap-2">
                    <a href="{{ path('admin_reponse_edit', {'id': reponse.id}) }}" 
                       class="btn btn-warning">Éditer</a>
                    <form method="POST" action="{{ path('admin_reponse_delete', {'id': reponse.id}) }}" 
                          style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Êtes-vous sûr?')">
                            Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
