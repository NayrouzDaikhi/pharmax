{% extends 'base.html.twig' %}

{% block title %}Nouvelle Reponse{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <h4 class="py-3 mb-4">Nouvelle Reponse</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Reclamation: {{ reclamation.titre }}</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3 p-3 bg-light rounded">
                        <strong>Description:</strong>
                        <p>{{ reclamation.description }}</p>
                    </div>

                    <form method="POST">
                        <div class="mb-3">
                            <label for="contenu" class="form-label">Contenu de la Reponse</label>
                            <textarea class="form-control" id="contenu" name="contenu" rows="5" required></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">Cr√©er Reponse</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
