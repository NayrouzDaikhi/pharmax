<h1>Invoice</h1>

<div class="invoice">
    <div class="invoice-header">
        <h2>PHARMAX - Invoice #{{ invoiceNumber }}</h2>
        <p>Date: {{ invoiceDate|date('d/m/Y') }}</p>
        <p>Due Date: {{ dueDate|date('d/m/Y') }}</p>
    </div>

    <div class="company-info">
        <h3>{{ companyInfo.name }}</h3>
        <p>{{ companyInfo.address }}</p>
        <p>Phone: {{ companyInfo.phone }}</p>
        <p>Email: {{ companyInfo.email }}</p>
        <p>Tax ID: {{ companyInfo.taxId }}</p>
    </div>

    <div class="customer-info">
        <h3>Bill To:</h3>
        <p>{{ commande.utilisateur.firstName }} {{ commande.utilisateur.lastName }}</p>
        <p>{{ commande.utilisateur.email }}</p>
    </div>

    <table class="items-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>SKU</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for ligne in commande.ligneCommandes %}
            <tr>
                <td>{{ ligne.nomProduit }}</td>
                <td>{{ ligne.skuProduit }}</td>
                <td>{{ ligne.quantite }}</td>
                <td>{{ ligne.prix|number_format(2, ',', ' ') }} DT</td>
                <td>{{ (ligne.prix * ligne.quantite)|number_format(2, ',', ' ') }} DT</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="invoice-summary">
        <p><strong>Total:</strong> {{ commande.totales|number_format(2, ',', ' ') }} DT</p>
        <p><strong>Status:</strong> {{ commande.statut }}</p>
        {% if stripePaymentId %}
        <p><strong>Payment ID:</strong> {{ stripePaymentId }}</p>
        {% endif %}
    </div>

    <div class="footer">
        <p>Thank you for your business!</p>
        <p>For inquiries, please contact: {{ companyInfo.email }}</p>
    </div>
</div>

<style>
    .invoice {
        font-family: Arial, sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }
    .invoice-header {
        border-bottom: 2px solid #333;
        margin-bottom: 20px;
        padding-bottom: 10px;
    }
    .company-info, .customer-info {
        margin-bottom: 20px;
    }
    .items-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }
    .items-table th, .items-table td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }
    .items-table th {
        background-color: #f5f5f5;
        font-weight: bold;
    }
    .invoice-summary {
        text-align: right;
        margin-top: 20px;
        padding-top: 10px;
        border-top: 1px solid #ddd;
    }
    .footer {
        margin-top: 30px;
        text-align: center;
        color: #666;
        font-size: 12px;
    }
</style>
