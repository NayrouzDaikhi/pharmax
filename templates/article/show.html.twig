{% extends 'base_simple.html.twig' %}

{% block title %}{{ article.titre }} - Pharmax{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <div class="d-flex align-items-center gap-3 mb-2">
            <h1 class="mb-0">{{ article.titre }}</h1>
            {% if article.isDraft %}
                <span class="badge bg-warning">Brouillon</span>
            {% else %}
                <span class="badge bg-success">Publié</span>
            {% endif %}
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Tableau de bord</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_article_index') }}">Articles</a></li>
                <li class="breadcrumb-item active">{{ article.titre }}</li>
            </ol>
        </nav>
    </div>
    <div class="btn-group">
        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-success">
            <i class="bx bx-edit"></i> Modifier
        </a>
        <form method="post" action="{{ path('app_article_toggle_publish', {'id': article.id}) }}" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('toggle_publish' ~ article.id) }}">
            {% if article.isDraft %}
                <button type="submit" class="btn btn-primary">
                    <i class="bx bx-cloud-upload"></i> Publier
                </button>
            {% else %}
                <button type="submit" class="btn btn-warning">
                    <i class="bx bx-arrow-back"></i> Dépublier
                </button>
            {% endif %}
        </form>
        <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
            <button type="submit" class="btn btn-danger">
                <i class="bx bx-trash"></i> Supprimer
            </button>
        </form>
        <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
            <i class="bx bx-arrow-back"></i> Retour
        </a>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Informations de l'article</h5>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <label class="form-label">Titre</label>
                    <p class="border p-3 rounded bg-light">{{ article.titre }}</p>
                </div>

                <div class="mb-4">
                    <label class="form-label">Contenu</label>
                    <div class="border p-3 rounded bg-light" style="max-height: 300px; overflow-y: auto;">
                        {{ article.contenu|nl2br }}
                    </div>
                </div>

                <!-- Translation Button and Content -->
                <div class="mb-4">
                    <form method="post" action="{{ path('app_article_translate', {id: article.id}) }}" style="display: inline;">
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bx bx-globe"></i> Traduire en Anglais
                        </button>
                    </form>
                </div>

                {% if article.contenuEn %}
                    <div class="mb-4">
                        <label class="form-label">English Version</label>
                        <div class="border p-3 rounded bg-light" style="max-height: 300px; overflow-y: auto; border-left: 4px solid #28a745;">
                            {{ article.contenuEn|nl2br }}
                        </div>
                    </div>
                {% endif %}

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Date de création</label>
                            <p class="border-bottom pb-2">
                                <i class="bx bx-calendar me-2"></i>
                                <small class="text-muted">{{ article.dateCreation ? article.dateCreation|date('d M Y H:i') : 'N/A' }}</small>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Date de modification</label>
                            <p class="border-bottom pb-2">
                                <i class="bx bx-calendar me-2"></i>
                                <small class="text-muted">{{ article.dateModification ? article.dateModification|date('d M Y H:i') : '-' }}</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Comments Section (Full Width) -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Commentaires ({{ article.commentaires|length }})</h5>
                
            </div>
            <div class="card-body">
                {% if article.commentaires|length > 0 %}
                    <div class="comments-list">
                        {% for comment in article.commentaires %}
                        <div class="card mb-3 border-start border-4" style="border-color: {% if loop.index % 3 == 0 %}#87ceeb{% elseif loop.index % 3 == 1 %}#ffe4b5{% else %}#e6e6fa{% endif %} !important;">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div class="flex-grow-1">
                                        <h6 class="card-title mb-1">Commentaire #{{ comment.id }}</h6>
                                        <small class="text-muted">{{ comment.datePublication ? comment.datePublication|date('d M Y H:i') : 'N/A' }}</small>
                                    </div>
                                    <div>
                                        {% if comment.statut == 'approuvé' %}
                                            <span class="badge bg-success">Validé</span>
                                        {% elseif comment.statut == 'en attente' %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ comment.statut }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <p class="card-text">{{ comment.contenu }}</p>
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_commentaire_show', {'id': comment.id}) }}" class="btn btn-info" title="Voir">
                                        <i class="bx bx-eye"></i>
                                    </a>
                                    <a href="{{ path('app_commentaire_edit', {'id': comment.id}) }}" class="btn btn-success" title="Modifier">
                                        <i class="bx bx-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_commentaire_delete', {'id': comment.id}) }}" style="display: inline;" onsubmit="return confirm('Supprimer ce commentaire?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                        <button type="submit" class="btn btn-danger" title="Supprimer">
                                            <i class="bx bx-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bx bx-comment-dots" style="font-size: 2rem; color: #ccc;"></i>
                        <p class="text-muted mt-3">Aucun commentaire pour le moment. <a href="{{ path('app_commentaire_new', {'article_id': article.id}) }}"></a></p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Image en vedette</h5>
            </div>
            <div class="card-body text-center">
                {% if article.image %}
                    <img src="{{ asset('uploads/images/' ~ article.image) }}" class="img-fluid rounded mb-3" alt="{{ article.titre }}" style="max-height: 300px;">
                    <p class="small text-muted">{{ article.image }}</p>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bx bx-image" style="font-size: 3rem; color: #ccc;"></i>
                        <p class="text-muted mt-3">Aucune image téléchargée</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Comments Count -->
        <div class="card mt-3">
            <div class="card-body text-center">
                <h2 class="text-primary mb-1">{{ article.commentaires|length }}</h2>
                <p class="text-muted mb-0">Commentaires</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

