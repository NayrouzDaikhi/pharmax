{% extends 'base_simple.html.twig' %}

{% block title %}{{'Articles - Pharmax'|trans}}{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">{{'Articles Management'|trans}}</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">{{'Dashboard'|trans}}</a></li>
                <li class="breadcrumb-item active">{{'Articles'|trans}}</li>
            </ol>
        </nav>
    </div>
    <a href="{{ path('app_article_new') }}" class="btn btn-primary">
        <i class="bx bx-plus"></i> {{'New Article'|trans}}
    </a>
</div>
{% endblock %}

{% block body %}
<!-- Search Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" action="{{ path('app_article_index') }}" class="d-flex gap-2 align-items-end flex-wrap">
            <div class="flex-grow-1">
                <input type="text" name="search" class="form-control" placeholder="{{'Search articles...'|trans}}" value="{{ searchQuery }}">
            </div>
            <div>
                <select name="sort_order" class="form-select">
                    <option value="desc" {% if sortOrder == 'desc' %}selected{% endif %}>
                        {{'Newest First'|trans}}
                    </option>
                    <option value="asc" {% if sortOrder == 'asc' %}selected{% endif %}>
                        {{'Oldest First'|trans}}
                    </option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="bx bx-search"></i> {{'Search'|trans}}
            </button>
            {% if searchQuery %}
                <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
                    <i class="bx bx-x"></i> {{'Clear'|trans}}
                </a>
            {% endif %}
        </form>
    </div>
</div>

<!-- Statistics Section -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6 class="card-title text-muted mb-3">Nombre total d'articles</h6>
                <h2 class="text-primary mb-0">{{ totalArticles }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6 class="card-title text-muted mb-3">Nombre total de commentaires</h6>
                <h2 class="text-info mb-0">{{ totalCommentaires }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6 class="card-title text-muted mb-3">Commentaires en attente</h6>
                <h2 class="text-warning mb-0">{{ statsByStatus['en_attente'] }}</h2>
                <small class="text-muted d-block mt-2">
                    Approuvés: <span class="text-success">{{ statsByStatus['valide'] }}</span> | 
                    Bloqués: <span class="text-danger">{{ statsByStatus['bloque'] }}</span>
                </small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6 class="card-title text-muted mb-3">Derniers commentaires</h6>
                {% if commentsByDate|length > 0 %}
                    {% set lastDate = commentsByDate|keys|last %}
                    <h2 class="text-success mb-0">{{ commentsByDate[lastDate] }}</h2>
                    <small class="text-muted d-block mt-2">{{ lastDate|date('d/m/Y') }}</small>
                {% else %}
                    <h2 class="text-secondary mb-0">-</h2>
                    <small class="text-muted d-block mt-2">Aucun</small>
                {% endif %}
            </div>
        </div>
    </div>
</div>


<div class="card">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>{{'Title'|trans}}</th>
                    <th>{{'Image'|trans}}</th>
                    <th>{{'Comments count'|trans}}</th>
                    <th>{{'Created'|trans}}</th>
                    <th>{{'Modified'|trans}}</th>
                    <th>{{'Actions'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% if articles is not empty %}
                    {% for article in articles %}
                    <tr class="table-row-clickable {% if article.id == mostCommentedArticleId %}table-highlighted{% endif %}" data-href="{{ path('app_article_show', {'id': article.id}) }}" role="button">
                        <td>
                            <strong>{{ article.titre }}</strong>
                            {% if article.id == mostCommentedArticleId %}<i class="bx bx-star ms-2" style="color: #ffc107;"></i>{% endif %}
                        </td>
                        <td>
                            {% if article.image %}
                                <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.titre }}" style="max-height: 40px; border-radius: 4px;">
                            {% else %}
                                <span class="badge badge-secondary">{{'No Image'|trans}}</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-info">{{ article.commentaires|length }}</span>
                        </td>
                        <td>
                            <small class="text-muted">{{ article.dateCreation ? article.dateCreation|date('d M Y') : 'N/A' }}</small>
                        </td>
                        <td>
                            <small class="text-muted">{{ article.dateModification ? article.dateModification|date('d M Y') : '-' }}</small>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning" title="{{'Edit'|trans}}">
                                    <i class="bx bx-edit"></i>
                                </a>
                                <a href="{{ path('app_article_delete', {'id': article.id}) }}" class="btn btn-sm btn-danger" title="{{'Delete'|trans}}" onclick="return confirm('{{'Delete this article?'|trans}}');">
                                    <i class="bx bx-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <i class="bx bx-inbox" style="font-size: 2rem; color: #ccc;"></i>
                            <p class="text-muted mt-2">{{'No articles found.'|trans}} <a href="{{ path('app_article_new') }}">{{'Create one'|trans}}</a></p>
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>

<!-- Comments Table -->
<div class="card mt-4">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">{{'Comments Management'|trans}}</h5>
            <form method="get" action="{{ path('app_article_index') }}" class="d-flex gap-2" style="margin-bottom: 0;">
                <input type="hidden" name="search" value="{{ searchQuery }}">
                <input type="hidden" name="sort_order" value="{{ sortOrder }}">
                <select name="comment_filter" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit();">
                    <option value="">{{'All Comments'|trans}}</option>
                    <option value="valide" {% if commentFilter == 'valide' %}selected{% endif %}>{{'Approved'|trans}}</option>
                    <option value="en_attente" {% if commentFilter == 'en_attente' %}selected{% endif %}>{{'Pending'|trans}}</option>
                    <option value="bloque" {% if commentFilter == 'bloque' %}selected{% endif %}>{{'Blocked'|trans}}</option>
                </select>
            </form>
        </div>
        
        <!-- Nav Tabs -->
        <ul class="nav nav-tabs mb-0" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="comments-tab" data-bs-toggle="tab" data-bs-target="#comments">
                    {{'Active Comments'|trans}} ({{ commentaires|length }})
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="archive-tab" data-bs-toggle="tab" data-bs-target="#archive">
                    {{'Archived Comments'|trans}} 
                    <span class="badge bg-danger">{{ archived_commentaires|length }}</span>
                </button>
            </li>
        </ul>
    </div>
    
    <!-- Tab Content -->
    <div class="tab-content">
        <!-- Active Comments Tab -->
        <div class="tab-pane fade show active" id="comments" role="tabpanel" aria-labelledby="comments-tab">
            <!-- Selection Actions Bar -->
            <div id="selectionActionsBar" class="alert alert-info d-none mb-3" role="alert">
                <div class="d-flex justify-content-between align-items-center">
                    <span id="selectionCount">0 {{'comments selected'|trans}}</span>
                    <div class="btn-group" role="group">
                        <button type="button" id="deleteSelectedBtn" class="btn btn-danger btn-sm">
                            <i class="bx bx-trash"></i> {{'Delete Selected'|trans}}
                        </button>
                        <button type="button" id="cancelSelectionBtn" class="btn btn-secondary btn-sm">
                            <i class="bx bx-x"></i> {{'Cancel'|trans}}
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width: 50px;">
                                <input type="checkbox" id="selectAllCheckbox" class="form-check-input" title="{{'Select all'|trans}}">
                            </th>
                            <th>{{'ID'|trans}}</th>
                            <th>{{'Article'|trans}}</th>
                            <th>{{'Content'|trans}}</th>
                            <th>{{'Published'|trans}}</th>
                            <th>{{'Status'|trans}}</th>
                            <th>{{'Actions'|trans}}</th>
                        </tr>
                    </thead>
                    <tbody id="commentTableBody">
                        {% if commentaires is not empty %}
                            {% for commentaire in commentaires %}
                            <tr class="comment-row" data-comment-id="{{ commentaire.id }}" data-href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}" data-article-id="{{ commentaire.article.id }}">
                                <td onclick="event.stopPropagation();">
                                    <input type="checkbox" class="form-check-input comment-checkbox" value="{{ commentaire.id }}">
                                </td>
                                <td>
                                    <code class="text-info">#{{ commentaire.id }}</code>
                                </td>
                                <td>
                                    <span class="badge badge-light">{{ commentaire.article.titre }}</span>
                                </td>
                                <td>
                                    <p class="text-muted mb-0">
                                        {% if commentaire.contenu|length > 50 %}
                                            {{ commentaire.contenu|slice(0, 50) }}...
                                        {% else %}
                                            {{ commentaire.contenu }}
                                        {% endif %}
                                    </p>
                                </td>
                                <td>
                                    <small class="text-muted">{{ commentaire.datePublication ? commentaire.datePublication|date('d M Y') : 'N/A' }}</small>
                                </td>
                                <td>
                                    {% if commentaire.statut|lower == 'valide' %}
                                        <span class="badge badge-success">{{'Approved'|trans}}</span>
                                    {% elseif commentaire.statut|lower == 'en_attente' %}
                                        <span class="badge badge-warning">{{'Pending'|trans}}</span>
                                    {% else %}
                                        <span class="badge badge-secondary">{{ commentaire.statut }}</span>
                                    {% endif %}
                                </td>
                                <td onclick="event.stopPropagation();">
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-sm btn-warning" title="{{'Edit'|trans}}">
                                            <i class="bx bx-edit"></i>
                                        </a>
                                        <a href="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}" class="btn btn-sm btn-danger" title="{{'Delete'|trans}}" onclick="return confirm('{{'Delete this comment?'|trans}}');">
                                            <i class="bx bx-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="bx bx-inbox" style="font-size: 2rem; color: #ccc;"></i>
                                    <p class="text-muted mt-2">{{'No comments found.'|trans}}</p>
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Archived Comments Tab -->
        <div class="tab-pane fade" id="archive" role="tabpanel" aria-labelledby="archive-tab">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>{{'ID'|trans}}</th>
                            <th>{{'User'|trans}}</th>
                            <th>{{'Article'|trans}}</th>
                            <th>{{'Content'|trans}}</th>
                            <th>{{'Blocked Date'|trans}}</th>
                            <th>{{'Reason'|trans}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if archived_commentaires is not empty %}
                            {% for archive in archived_commentaires %}
                            <tr>
                                <td>
                                    <code class="text-danger">#{{ archive.id }}</code>
                                </td>
                                <td>
                                    <small>{{ archive.userName }}</small>
                                    {% if archive.userEmail %}
                                        <br><small class="text-muted">{{ archive.userEmail }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge badge-light">{{ archive.article.titre }}</span>
                                </td>
                                <td>
                                    <p class="text-muted mb-0">
                                        {% if archive.contenu|length > 50 %}
                                            {{ archive.contenu|slice(0, 50) }}...
                                        {% else %}
                                            {{ archive.contenu }}
                                        {% endif %}
                                    </p>
                                </td>
                                <td>
                                    <small class="text-muted">{{ archive.archivedAt ? archive.archivedAt|date('d M Y H:i') : 'N/A' }}</small>
                                </td>
                                <td>
                                    <span class="badge bg-warning">{{ archive.reason }}</span>
                                </td>
                            </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="bx bx-inbox" style="font-size: 2rem; color: #ccc;"></i>
                                    <p class="text-muted mt-2">{{'No archived comments found.'|trans}}</p>
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Chart Section -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">{{'Comment Status Distribution'|trans}}</h5>
            </div>
            <div class="card-body">
                <div class="position-relative" style="height: 300px;">
                    <canvas id="commentStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    let commentStatusChart = null;
    
    // Initialize chart
    function initializeChart(statusData) {
        const ctx = document.getElementById('commentStatusChart');
        if (ctx) {
            // Destroy existing chart if it exists
            if (commentStatusChart) {
                commentStatusChart.destroy();
            }
            
            commentStatusChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: [
                        '{{'Approved'|trans}}',
                        '{{'Pending'|trans}}',
                        '{{'Blocked'|trans}}'
                    ],
                    datasets: [{
                        data: [
                            statusData.approved,
                            statusData.pending,
                            statusData.blocked
                        ],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.85)',    // Green for Approved
                            'rgba(255, 193, 7, 0.85)',    // Yellow for Pending
                            'rgba(220, 53, 69, 0.85)'     // Red for Blocked
                        ],
                        borderColor: [
                            '#28a745',
                            '#ffc107',
                            '#dc3545'
                        ],
                        borderWidth: 3,
                        hoverBackgroundColor: [
                            'rgba(40, 167, 69, 1)',
                            'rgba(255, 193, 7, 1)',
                            'rgba(220, 53, 69, 1)'
                        ],
                        hoverBorderColor: [
                            '#1e7e34',
                            '#ffb300',
                            '#bd2130'
                        ],
                        hoverBorderWidth: 4,
                        hoverOffset: 15
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                font: {
                                    size: 13,
                                    weight: 'bold'
                                },
                                usePointStyle: true,
                                pointStyle: 'circle',
                                generateLabels: function(chart) {
                                    const data = chart.data;
                                    const labels = data.labels;
                                    const datasets = data.datasets;
                                    
                                    return labels.map((label, i) => {
                                        const dataset = datasets[0];
                                        const value = dataset.data[i];
                                        const total = dataset.data.reduce((a, b) => a + b, 0);
                                        const percentage = ((value / total) * 100).toFixed(1);
                                        
                                        return {
                                            text: label + ' - ' + value + ' (' + percentage + '%)',
                                            fillStyle: dataset.backgroundColor[i],
                                            hidden: false,
                                            index: i
                                        };
                                    });
                                }
                            }
                        },
                        title: {
                            display: true,
                            text: '{{'Comment Status Distribution'|trans}}',
                            font: {
                                size: 15,
                                weight: 'bold'
                            },
                            padding: 20,
                            color: '#333'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = ((value / total) * 100).toFixed(1);
                                    return label + ': ' + value + ' (' + percentage + '%)';
                                }
                            },
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: {
                                size: 13,
                                weight: 'bold'
                            },
                            bodyFont: {
                                size: 12
                            },
                            borderColor: '#ddd',
                            borderWidth: 1,
                            displayColors: true,
                            boxPadding: 8
                        }
                    },
                    animation: {
                        animateRotate: true,
                        animateScale: false,
                        duration: 800,
                        easing: 'easeInOutQuart'
                    }
                }
            });
        }
    }
    
    // Fetch and update statistics
    async function updateStatistics() {
        try {
            const response = await fetch('/api/statistics');
            if (response.ok) {
                const data = await response.json();
                if (data.success) {
                    initializeChart({
                        approved: data.statistics.approved,
                        pending: data.statistics.pending,
                        blocked: data.statistics.blocked
                    });
                }
            }
        } catch (error) {
            console.error('Error fetching statistics:', error);
        }
    }
    
    // Expose globally so other pages can update the chart
    window.updateArticleStatistics = updateStatistics;
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        const statusData = {
            approved: {{ statsByStatus['valide'] }},
            pending: {{ statsByStatus['en_attente'] }},
            blocked: {{ statsByStatus['bloque'] }}
        };
        
        initializeChart(statusData);
        
        // Setup mass selection functionality
        const selectAllCheckbox = document.getElementById('selectAllCheckbox');
        const commentCheckboxes = document.querySelectorAll('.comment-checkbox');
        const selectionActionsBar = document.getElementById('selectionActionsBar');
        const deleteSelectedBtn = document.getElementById('deleteSelectedBtn');
        const cancelSelectionBtn = document.getElementById('cancelSelectionBtn');
        const selectionCount = document.getElementById('selectionCount');
        const commentTableBody = document.getElementById('commentTableBody');
        const commentRows = document.querySelectorAll('.comment-row');
        
        // Update selection count and visibility of action bar
        function updateSelectionUI() {
            const selectedCount = document.querySelectorAll('.comment-checkbox:checked').length;
            if (selectedCount > 0) {
                selectionActionsBar.classList.remove('d-none');
                selectionCount.textContent = selectedCount + ' {{'comments selected'|trans}}';
            } else {
                selectionActionsBar.classList.add('d-none');
            }
            
            // Update select all checkbox state
            const totalCheckboxes = document.querySelectorAll('.comment-checkbox').length;
            selectAllCheckbox.checked = selectedCount === totalCheckboxes && totalCheckboxes > 0;
            selectAllCheckbox.indeterminate = selectedCount > 0 && selectedCount < totalCheckboxes;
        }
        
        // Select all checkbox
        selectAllCheckbox.addEventListener('change', function() {
            document.querySelectorAll('.comment-checkbox').forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            updateSelectionUI();
        });
        
        // Individual checkboxes
        commentCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                updateSelectionUI();
            });
        });
        
        // Cancel selection
        cancelSelectionBtn.addEventListener('click', function() {
            selectAllCheckbox.checked = false;
            commentCheckboxes.forEach(checkbox => {
                checkbox.checked = false;
            });
            updateSelectionUI();
        });
        
        // Delete selected comments
        deleteSelectedBtn.addEventListener('click', async function() {
            const selectedIds = Array.from(document.querySelectorAll('.comment-checkbox:checked')).map(cb => cb.value);
            
            if (selectedIds.length === 0) {
                alert('{{'No comments selected'|trans}}');
                return;
            }
            
            if (!confirm(selectedIds.length + ' {{'comments will be deleted. Continue?'|trans}}')) {
                return;
            }
            
            deleteSelectedBtn.disabled = true;
            deleteSelectedBtn.innerHTML = '<i class="bx bx-loader-alt bx-spin"></i> {{'Deleting...'|trans}}';
            
            try {
                const response = await fetch('/api/commentaires/delete-multiple', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ ids: selectedIds })
                });
                
                const data = await response.json();
                
                if (response.ok && data.success) {
                    // Remove rows from table
                    selectedIds.forEach(id => {
                        const row = document.querySelector(`tr[data-comment-id="${id}"]`);
                        if (row) {
                            row.style.opacity = '0';
                            row.style.transform = 'translateX(-20px)';
                            setTimeout(() => row.remove(), 300);
                        }
                    });
                    
                    // Reset UI
                    setTimeout(() => {
                        updateSelectionUI();
                        
                        // Update statistics
                        if (typeof window.updateArticleStatistics === 'function') {
                            window.updateArticleStatistics();
                        }
                        
                        // Show success message
                        alert(data.message || '{{'Comments deleted successfully'|trans}}');
                    }, 300);
                } else {
                    alert(data.message || '{{'Error deleting comments'|trans}}');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('{{'Error deleting comments'|trans}}');
            } finally {
                deleteSelectedBtn.disabled = false;
                deleteSelectedBtn.innerHTML = '<i class="bx bx-trash"></i> {{'Delete Selected'|trans}}';
            }
        });
        
        // Click row to navigate (unless checkbox was clicked)
        commentRows.forEach(row => {
            row.addEventListener('click', function(e) {
                if (e.target.closest('.comment-checkbox') || e.target.closest('.btn-group')) {
                    return;
                }
                const href = this.getAttribute('data-href');
                if (href) {
                    window.location.href = href;
                }
            });
        });
    });
</script>
{% endblock %}

