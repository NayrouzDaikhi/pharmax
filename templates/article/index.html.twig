<!-- Chart Section -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">{{'Comment Status Distribution'|trans}}</h5>
            </div>
            <div class="card-body">
                <div class="position-relative" style="height: 300px;">
                    <canvas id="commentStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    let commentStatusChart = null;
    
    // Initialize chart
    function initializeChart(statusData) {
        const ctx = document.getElementById('commentStatusChart');
        if (ctx) {
            // Destroy existing chart if it exists
            if (commentStatusChart) {
                commentStatusChart.destroy();
            }
            
            commentStatusChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: [
                        '{{'Approved'|trans}}',
                        '{{'Pending'|trans}}',
                        '{{'Blocked'|trans}}'
                    ],
                    datasets: [{
                        data: [
                            statusData.approved,
                            statusData.pending,
                            statusData.blocked
                        ],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.85)',    // Green for Approved
                            'rgba(255, 193, 7, 0.85)',    // Yellow for Pending
                            'rgba(220, 53, 69, 0.85)'     // Red for Blocked
                        ],
