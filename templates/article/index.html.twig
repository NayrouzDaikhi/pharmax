{% extends 'base_simple.html.twig' %}

{% block title %}{{'Articles - Pharmax'|trans}}{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">{{'Articles Management'|trans}}</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">{{'Dashboard'|trans}}</a></li>
                <li class="breadcrumb-item active">{{'Articles'|trans}}</li>
            </ol>
        </nav>
    </div>
    <a href="{{ path('app_article_new') }}" class="btn btn-primary">
        <i class="bx bx-plus"></i> {{'New Article'|trans}}
    </a>
</div>
{% endblock %}

{% block body %}
<!-- Search Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" action="{{ path('app_article_index') }}" class="d-flex gap-2 align-items-end flex-wrap">
            <div class="flex-grow-1">
                <input type="text" name="search" class="form-control" placeholder="{{'Search articles...'|trans}}" value="{{ searchQuery }}">
            </div>
            <div>
                <select name="sort_order" class="form-select" onchange="document.getElementById('sortBy').value='date'; this.form.submit();">
                    <option value="" disabled selected>{{'Sort by Date'|trans}}</option>
                    <option value="desc" {% if sortOrder == 'desc' and sortBy == 'date' %}selected{% endif %}>
                        {{'Newest First'|trans}}
                    </option>
                    <option value="asc" {% if sortOrder == 'asc' and sortBy == 'date' %}selected{% endif %}>
                        {{'Oldest First'|trans}}
                    </option>
                </select>
            </div>
            <input type="hidden" name="sort_by" id="sortBy" value="{{ sortBy }}">
            <input type="hidden" name="sort_order" id="sortOrder" value="{{ sortOrder }}">
            <button type="submit" class="btn btn-primary">
                <i class="bx bx-search"></i> {{'Search'|trans}}
            </button>
            {% if searchQuery %}
                <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
                    <i class="bx bx-x"></i> {{'Clear'|trans}}
                </a>
            {% endif %}
        </form>
    </div>
</div>

<!-- Statistics Section -->
<div class="row mb-4" id="statisticsSection">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6 class="card-title text-muted mb-3">Nombre total d'articles</h6>
                <h2 id="totalArticlesCount" class="text-primary mb-0">{{ totalArticles }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6 class="card-title text-muted mb-3">Nombre total de commentaires</h6>
                <h2 id="totalCommentsCount" class="text-info mb-0">{{ totalCommentaires }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6 class="card-title text-muted mb-3">Commentaires en attente</h6>
                <h2 id="pendingCommentsCount" class="text-warning mb-0">{{ statsByStatus['en_attente'] }}</h2>
                <small class="text-muted d-block mt-2">
                    Approuvés: <span id="approvedCommentsCount" class="text-success">{{ statsByStatus['valide'] }}</span> | 
                    Bloqués: <span id="blockedCommentsCount" class="text-danger">{{ statsByStatus['bloque'] }}</span>
                </small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6 class="card-title text-muted mb-3">Derniers commentaires</h6>
                <div id="lastCommentsCard">
                    {% if commentsByDate|length > 0 %}
                        {% set lastDate = commentsByDate|keys|last %}
                        <h2 class="text-success mb-0">{{ commentsByDate[lastDate] }}</h2>
                        <small class="text-muted d-block mt-2">{{ lastDate|date('d/m/Y') }}</small>
                    {% else %}
                        <h2 class="text-secondary mb-0">-</h2>
                        <small class="text-muted d-block mt-2">Aucun</small>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Article Selection Actions Bar -->
<div id="articleSelectionActionsBar" class="alert alert-info d-none mb-3" role="alert">
    <div class="d-flex justify-content-between align-items-center">
        <span id="articleSelectionCount">0 {{'articles selected'|trans}}</span>
        <div class="btn-group" role="group">
            <button type="button" id="deleteArticlesSelectedBtn" class="btn btn-danger btn-sm">
                <i class="bx bx-trash"></i> {{'Delete Selected'|trans}}
            </button>
            <button type="button" id="cancelArticleSelectionBtn" class="btn btn-secondary btn-sm">
                <i class="bx bx-x"></i> {{'Cancel'|trans}}
            </button>
        </div>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="width: 50px;">
                        <input type="checkbox" id="selectArticlesAllCheckbox" class="form-check-input" title="{{'Select all'|trans}}">
                    </th>
                    <th style="cursor: pointer;">
                        <a href="#" class="sortable-header" data-sort="titre" style="text-decoration: none; color: inherit;">
                            {{'Title'|trans}}
                            {% if sortBy == 'titre' %}
                                <i class="bx {% if sortOrder == 'asc' %}bx-up{% else %}bx-down{% endif %}" style="font-size: 12px;"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>{{'Image'|trans}}</th>
                    <th style="cursor: pointer;">
                        <a href="#" class="sortable-header" data-sort="comments" style="text-decoration: none; color: inherit;">
                            {{'Comments count'|trans}}
                            {% if sortBy == 'comments' %}
                                <i class="bx {% if sortOrder == 'asc' %}bx-up{% else %}bx-down{% endif %}" style="font-size: 12px;"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th style="cursor: pointer;">
                        <a href="#" class="sortable-header" data-sort="date" style="text-decoration: none; color: inherit;">
                            {{'Created'|trans}}
                            {% if sortBy == 'date' %}
                                <i class="bx {% if sortOrder == 'asc' %}bx-up{% else %}bx-down{% endif %}" style="font-size: 12px;"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>{{'Modified'|trans}}</th>
                    <th>{{'Actions'|trans}}</th>
                </tr>
            </thead>
            <tbody id="articleTableBody">
                {% if articles is not empty %}
                    {% for article in articles %}
                    <tr class="article-row {% if article.id == mostLikedArticleId %}table-most-liked{% endif %}" data-article-id="{{ article.id }}" data-href="{{ path('app_article_show', {'id': article.id}) }}" role="button">
                        <td onclick="event.stopPropagation();">
                            <input type="checkbox" class="form-check-input article-checkbox" value="{{ article.id }}">
                        </td>
                        <td>
                            <strong>{{ article.titre }}</strong>
                            {% if article.id == mostCommentedArticleId %}<i class="bx bx-star ms-2" style="color: #ffc107;"></i>{% endif %}
                            {% if article.id == mostLikedArticleId %}<i class="fas fa-heart ms-2" style="color: #ff6b6b;"></i>{% endif %}
                        </td>
                        <td>
                            {% if article.image %}
                                <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.titre }}" style="max-height: 40px; border-radius: 4px;">
                            {% else %}
                                <span class="badge badge-secondary">{{'No Image'|trans}}</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-info">{{ article.commentaires|length }}</span>
                        </td>
                        <td>
                            <small class="text-muted">{{ article.dateCreation ? article.dateCreation|date('d M Y') : 'N/A' }}</small>
                        </td>
                        <td>
                            <small class="text-muted">{{ article.dateModification ? article.dateModification|date('d M Y') : '-' }}</small>
                        </td>
                        <td onclick="event.stopPropagation();">
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning" title="{{'Edit'|trans}}">
                                    <i class="bx bx-edit"></i>
                                </a>
                                <a href="{{ path('app_article_delete', {'id': article.id}) }}" class="btn btn-sm btn-danger" title="{{'Delete'|trans}}" onclick="return confirm('{{'Delete this article?'|trans}}');">
                                    <i class="bx bx-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center py-5">
                            <i class="bx bx-inbox" style="font-size: 2rem; color: #ccc;"></i>
                            <p class="text-muted mt-2">{{'No articles found.'|trans}}</p>
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>

