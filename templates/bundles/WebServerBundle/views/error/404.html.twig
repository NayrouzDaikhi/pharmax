{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card text-center p-5">
                <h1 class="display-1 mb-3" style="color: #dc3545;">⚠️ 404</h1>
                <h3 class="mb-3">Commande non trouvée</h3>
                <p class="text-muted mb-4">
                    {{ message ?? 'La commande que vous recherchez n\'existe pas ou a été supprimée.' }}
                </p>
                
                <div class="d-flex gap-2 justify-content-center">
                    <a href="{{ path('app_commande_index') }}" class="btn btn-primary">
                        <i class="bx bx-list-ul me-2"></i>Liste des commandes
                    </a>
                    <a href="{{ path('app_frontend_produit_index') }}" class="btn btn-outline-secondary">
                        <i class="bx bx-home me-2"></i>Accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
