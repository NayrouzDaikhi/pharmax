{% extends "base.html.twig" %}

{% block title %}Commandes - Pharmax{% endblock %}

{% block content %}
<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Gestion /</span> Commandes
    </h4>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1 text-muted">En cours</h6>
                            <h3 class="card-text text-primary">{{ statistics.en_cours }}</h3>
                        </div>
                        <i class="bx bx-run" style="font-size:2rem; color:#007bff;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1 text-muted">En attente</h6>
                            <h3 class="card-text text-warning">{{ statistics.en_attente }}</h3>
                        </div>
                        <i class="bx bx-time" style="font-size:2rem; color:#ffc107;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1 text-muted">Annulée</h6>
                            <h3 class="card-text text-danger">{{ statistics.annule }}</h3>
                        </div>
                        <i class="bx bx-x" style="font-size:2rem; color:#dc3545;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-header mb-0">Liste des Commandes</h5>
            <div class="d-flex gap-2">
                <form id="filter-form" method="get" class="d-flex gap-2 align-items-center">
                    <input id="filter-id" type="number" name="id" class="form-control form-control-sm" placeholder="ID" value="{{ filter_id }}">
                    <select id="filter-statut" name="statut" class="form-select form-select-sm">
                        <option value="">Tous statuts</option>
                        <option value="en_cours" {% if filter_statut == 'en_cours' %}selected{% endif %}>En cours</option>
                        <option value="en_attente" {% if filter_statut == 'en_attente' %}selected{% endif %}>En attente</option>
                        <option value="annule" {% if filter_statut == 'annule' %}selected{% endif %}>Annulée</option>
                    </select>
                    <button class="btn btn-outline-secondary btn-sm" type="submit">Rechercher</button>
                    <button id="filter-reset" type="button" class="btn btn-light btn-sm">Réinitialiser</button>
                </form>
                
            </div>
        </div>

        <div class="card-body pb-2">
            <div class="d-flex gap-2">
                <a href="{{ path('app_commande_index', app.request.query.all|merge({'sort':'utilisateur','direction': 'asc'})) }}" class="btn btn-outline-info btn-sm">
                    <i class="bx bx-sort-a-z"></i> Tri par Utilisateur
                </a>
                <a href="{{ path('app_commande_index', app.request.query.all|merge({'sort':'created_at','direction': 'desc'})) }}" class="btn btn-outline-info btn-sm">
                    <i class="bx bx-sort"></i> Tri par Date (Récente)
                </a>
                <a href="{{ path('app_commande_export_pdf', app.request.query.all) }}" class="btn btn-outline-danger btn-sm" target="_blank">
                    <i class="bx bx-file-pdf"></i> Exporter en PDF
                </a>
            </div>
        </div>

        <div class="table-responsive text-nowrap" style="overflow:auto;">
            {% set curSort = sort|default('') %}
            {% set curDir = direction|default('DESC') %}
            <table class="table table-striped table-hover" style="width:100%; font-size:1.05rem;">
                <thead>
                    <tr>
                        <th>
                            {% set dir = (curSort == 'id' and curDir == 'ASC') ? 'desc' : 'asc' %}
                            <a href="{{ path('app_commande_index', app.request.query.all|merge({'sort':'id','direction': dir})) }}">ID
                                {% if curSort == 'id' %}{% if curDir == 'ASC' %} ▲{% else %} ▼{% endif %}{% endif %}
                            </a>
                        </th>
                        <th>
                            {% set dirU = (curSort == 'utilisateur' and curDir == 'ASC') ? 'desc' : 'asc' %}
                            <a href="{{ path('app_commande_index', app.request.query.all|merge({'sort':'utilisateur','direction': dirU})) }}">Utilisateur
                                {% if curSort == 'utilisateur' %}{% if curDir == 'ASC' %} ▲{% else %} ▼{% endif %}{% endif %}
                            </a>
                        </th>
                        <th style="min-width:240px">Produits</th>
                        <th style="min-width:120px">
                            {% set dirT = (curSort == 'totales' and curDir == 'ASC') ? 'desc' : 'asc' %}
                            <a href="{{ path('app_commande_index', app.request.query.all|merge({'sort':'totales','direction': dirT})) }}">Totales
                                {% if curSort == 'totales' %}{% if curDir == 'ASC' %} ▲{% else %} ▼{% endif %}{% endif %}
                            </a>
                        </th>
                        <th style="min-width:140px">
                            {% set dirS = (curSort == 'statut' and curDir == 'ASC') ? 'desc' : 'asc' %}
                            <a href="{{ path('app_commande_index', app.request.query.all|merge({'sort':'statut','direction': dirS})) }}">Statut
                                {% if curSort == 'statut' %}{% if curDir == 'ASC' %} ▲{% else %} ▼{% endif %}{% endif %}
                            </a>
                        </th>
                        <th style="min-width:140px">
                            {% set dirD = (curSort == 'created_at' and curDir == 'ASC') ? 'desc' : 'asc' %}
                            <a href="{{ path('app_commande_index', app.request.query.all|merge({'sort':'created_at','direction': dirD})) }}">Date
                                {% if curSort == 'created_at' %}{% if curDir == 'ASC' %} ▲{% else %} ▼{% endif %}{% endif %}
                            </a>
                        </th>
                        <th style="min-width:140px">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    {% if commandes is empty %}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">Aucune commande trouvée</td>
                        </tr>
                    {% else %}
                        {% for commande in commandes %}
                            <tr>
                                <td><strong>#{{ commande.id }}</strong></td>
                                <td>{{ commande.utilisateur.email }}</td>
                                <td>
                                    {% if commande.produits is iterable %}
                                        {% for produit in commande.produits %}
                                            <span class="badge bg-label-info">{{ produit }}</span>
                                        {% endfor %}
                                    {% else %}
                                        {{ commande.produits|default('N/A') }}
                                    {% endif %}
                                </td>
                                <td><strong>${{ commande.totales|number_format(2) }}</strong></td>
                                <td>
                                    {% if commande.statut == 'en_cours' %}
                                        <span class="badge bg-label-primary">● En cours</span>
                                    {% elseif commande.statut == 'en_attente' %}
                                        <span class="badge bg-label-warning">⏳ En attente</span>
                                    {% elseif commande.statut == 'annule' or commande.statut == 'annulée' %}
                                        <span class="badge bg-label-danger">✕ Annulée</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="text-muted">
                                            <i class="bx bx-calendar me-1"></i>{{ commande.createdAt|date('d/m/Y') }}
                                        </span>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="{{ path('app_commande_show', {'id': commande.id}) }}">
                                                    <i class="bx bx-eye me-1"></i> Voir
                                                </a>
                                                <a class="dropdown-item" href="{{ path('app_commande_edit', {'id': commande.id}) }}">
                                                    <i class="bx bx-edit-alt me-1"></i> Modifier
                                                </a>
                                                <form method="POST" action="{{ path('app_commande_delete', {'id': commande.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                                                    <button type="submit" class="dropdown-item" style="background:none; border:none; padding: 0.5rem 1rem; text-align:left; width:100%;">
                                                        <i class="bx bx-trash me-1"></i> Supprimer
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
            <script>
            document.addEventListener('DOMContentLoaded', function () {
                const idField = document.getElementById('filter-id');
                const statutField = document.getElementById('filter-statut');
                const resetBtn = document.getElementById('filter-reset');

                function updateState() {
                    const idVal = idField && idField.value;
                    const statutVal = statutField && statutField.value;

                    if (idVal) {
                        if (statutField) statutField.disabled = true;
                    } else if (statutVal) {
                        if (idField) idField.disabled = true;
                    } else {
                        if (idField) idField.disabled = false;
                        if (statutField) statutField.disabled = false;
                    }
                }

                [idField, statutField].forEach(function (el) {
                    if (!el) return;
                    el.addEventListener('input', updateState);
                    el.addEventListener('change', updateState);
                });

                if (resetBtn) {
                    resetBtn.addEventListener('click', function () {
                        // Redirect to index with all=1 to show all commandes
                        window.location.href = '{{ path('app_commande_index') }}?all=1';
                    });
                }

                updateState();
            });
            </script>

            {% endblock %}
