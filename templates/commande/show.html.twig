{% extends "base.html.twig" %}

{% block title %}Détail Commande #{{ commande.id }} - Pharmax{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Commande /</span> #{{ commande.id }}
    </h4>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Détails de la Commande</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted">Utilisateur:</label>
                            <p class="fw-bold">{{ commande.utilisateur.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted">ID Commande:</label>
                            <p class="fw-bold">#{{ commande.id }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted">Date:</label>
                            <p class="fw-bold">{{ commande.createdAt|date('d/m/Y H:i') }}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted">Statut:</label>
                            <p>
                                    {% if commande.statut == 'en_cours' %}
                                        <span class="badge bg-label-primary">● En cours</span>
                                    {% elseif commande.statut == 'en_attente' %}
                                        <span class="badge bg-label-warning">⏳ En attente</span>
                                    {% elseif commande.statut == 'annule' or commande.statut == 'annulée' %}
                                        <span class="badge bg-label-danger">✕ Annulée</span>
                                    {% endif %}
                            </p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Produits:</label>
                        <div>
                            {% if commande.produits is iterable %}
                                {% for produit in commande.produits %}
                                    <span class="badge bg-label-info">{{ produit }}</span>
                                {% endfor %}
                            {% else %}
                                <p class="fw-bold">{{ commande.produits|default('N/A') }}</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Montant Total:</label>
                        <h3 class="text-success">${{ commande.totales|number_format(2) }}</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3 p-2 bg-light rounded">
                        <small class="text-muted">
                            <i class="bx bx-calendar me-1"></i>Créée le {{ commande.createdAt|date('d/m/Y à H:i') }}
                        </small>
                    </div>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-primary w-100 mb-2">
                        <i class="bx bx-edit-alt me-1"></i> Modifier
                    </a>
                    <form method="POST" action="{{ path('app_commande_delete', {'id': commande.id}) }}" onsubmit="return confirm('Êtes-vous sûr?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                        <button type="submit" class="btn btn-danger w-100 mb-2">
                            <i class="bx bx-trash me-1"></i> Supprimer
                        </button>
                    </form>
                    <a href="{{ path('app_commande_index') }}" class="btn btn-secondary w-100">
                        <i class="bx bx-arrow-back me-1"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
