<li class="nav-item me-3">
  <a class="nav-link position-relative" href="{{ path('notification_index') }}" title="Notifications">
    <i class="bx bx-bell" style="font-size: 1.6rem; {% if unreadCount > 0 %}color: #dc3545;{% else %}color: #6c757d;{% endif %}"></i>
    {% if unreadCount > 0 %}
      <span class="badge rounded-pill bg-danger position-absolute top-0 start-100 translate-middle">
        {{ unreadCount }}
      </span>
    {% endif %}
  </a>
</li>

