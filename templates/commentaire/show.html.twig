{% extends 'base_simple.html.twig' %}

{% block title %}Comment #{{ commentaire.id }} - Pharmax{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">Comment #{{ commentaire.id }}</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_commentaire_index') }}">Comments</a></li>
                <li class="breadcrumb-item active">Comment #{{ commentaire.id }}</li>
            </ol>
        </nav>
    </div>
    <div class="btn-group">
        <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-success">
            <i class="bx bx-edit"></i> Modify
        </a>
        <a href="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}" class="btn btn-danger" data-confirm-delete>
            <i class="bx bx-trash"></i> Delete
        </a>
        <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">
            <i class="bx bx-arrow-back"></i> Back
        </a>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Comment Content</h5>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <label class="form-label">Content</label>
                    <div class="border p-3 rounded bg-light" style="max-height: 300px; overflow-y: auto;">
                        {{ commentaire.contenu|nl2br }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Published Date</label>
                            <p class="border-bottom pb-2">
                                <i class="bx bx-calendar me-2"></i>
                                <small class="text-muted">{{ commentaire.datePublication ? commentaire.datePublication|date('d M Y H:i') : 'N/A' }}</small>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <p class="pb-2">
                                {% if commentaire.statut == 'approuv√©' %}
                                    <span class="badge badge-success">Approved</span>
                                {% elseif commentaire.statut == 'en attente' %}
                                    <span class="badge badge-warning">Pending</span>
                                {% else %}
                                    <span class="badge badge-secondary">{{ commentaire.statut }}</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
</div>
{% endblock %}
