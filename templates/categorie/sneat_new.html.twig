{% extends 'base_simple.html.twig' %}

{% block title %}Ajouter une Catégorie{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">Ajouter une Catégorie</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Tableau de bord</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_categorie_index') }}">Catégories</a></li>
                <li class="breadcrumb-item active">Nouvelle</li>
            </ol>
        </nav>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bx bx-plus-circle"></i> Ajouter une catégorie
          </h5>
        </div>

        <div class="card-body">
          {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="mb-3">
              {{ form_label(form.nom, 'Nom de la catégorie') }}
              {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Médicaments'}}) }}
              {{ form_errors(form.nom) }}
            </div>

            <div class="mb-3">
              {{ form_label(form.description, 'Description') }}
              {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Description détaillée de la catégorie...'}}) }}
              {{ form_errors(form.description) }}
            </div>

            <div class="mb-3">
              {{ form_label(form.image, 'Image de la catégorie') }}
              <div class="input-group">
                {{ form_widget(form.image, {'attr': {'class': 'form-control', 'accept': 'image/*', 'id': 'imageInput'}}) }}
              </div>
              {{ form_errors(form.image) }}
              <small class="text-muted d-block mt-2">PNG, JPG, GIF, WebP (max 5MB)</small>
              <!-- Image preview container -->
              <div id="imagePreview" class="mt-3" style="display: flex; justify-content: center; align-items: center;">
                <img id="previewImg" src="" alt="Aperçu" style="max-width: 100%; max-height: 250px; border-radius: 12px; display: none; border: 2px solid #e0e0e0; box-shadow: 0 2px 8px rgba(0,0,0,0.1); padding: 4px; background: #f8f9fa;">
              </div>
            </div>

            <div class="d-flex gap-2 mt-4">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bx bx-plus"></i> Créer la catégorie
              </button>
              <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary btn-lg">
                <i class="bx bx-arrow-back"></i> Annuler
              </a>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
</div>

<script>
  // Image preview functionality
  document.getElementById('imageInput').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(event) {
        const img = document.getElementById('previewImg');
        img.src = event.target.result;
        img.style.display = 'block';
      };
      reader.readAsDataURL(file);
    }
  });
</script>
{% endblock %}
