{% extends 'base_simple.html.twig' %}

{% block title %}{{ categorie.name }}{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">{{ categorie.name }}</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Tableau de bord</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_categorie_index') }}">Catégories</a></li>
                <li class="breadcrumb-item active">Détail</li>
            </ol>
        </nav>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">{{ categorie.name }}</h5>
          <div>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-warning">
              <i class="bx bx-edit"></i> Modifier
            </a>
            <a href="{{ path('app_categorie_index') }}" class="btn btn-sm btn-secondary">
              <i class="bx bx-arrow-back"></i> Retour
            </a>
          </div>
        </div>

        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-4">Créé le:</dt>
            <dd class="col-sm-8">
              {{ categorie.createdAt|date('d/m/Y H:i') }}
            </dd>
          </dl>

          {% if categorie.description %}
            <div class="row mt-4">
              <div class="col-12">
                <h6 class="text-muted text-uppercase">Description</h6>
                <p class="text-justify">{{ categorie.description }}</p>
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Produits de la catégorie -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Produits de cette catégorie</h5>
        </div>

        <div class="table-responsive">
          <table class="table table-sm table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Nom</th>
                <th>Référence</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% if categorie.produits|length > 0 %}
                {% for produit in categorie.produits %}
                  <tr>
                    <td>
                      <strong>{{ produit.nom }}</strong>
                    </td>
                    <td>
                      <code>{{ produit.reference }}</code>
                    </td>
                    <td>
                      <strong class="text-success">{{ produit.prix|number_format(2, ',', ' ') }} DTN</strong>
                    </td>
                    <td>
                      {% if produit.quantite <= 10 %}
                        <span class="badge bg-danger">{{ produit.quantite }}</span>
                      {% elseif produit.quantite <= 50 %}
                        <span class="badge bg-warning">{{ produit.quantite }}</span>
                      {% else %}
                        <span class="badge bg-success">{{ produit.quantite }}</span>
                      {% endif %}
                    </td>
                    <td>
                      <a 
                        href="{{ path('app_produit_show', {'id': produit.id}) }}" 
                        class="btn btn-sm btn-outline-info"
                        title="Voir"
                      >
                        <i class="bx bx-show"></i>
                      </a>
                    </td>
                  </tr>
                {% endfor %}
              {% else %}
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">
                    <i class="bx bx-inbox"></i> Aucun produit dans cette catégorie
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
      </div>

      <!-- Delete button -->
      <div class="row mt-4">
        <div class="col-12">
          <form method="POST" action="{{ path('app_categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
            <button type="submit" class="btn btn-danger">
              <i class="bx bx-trash"></i> Supprimer cette catégorie
            </button>
          </form>
        </div>
      </div>
    </div>
</div>
{% endblock %}
