{% extends 'base_simple.html.twig' %}

{% block title %}Gestion des Produits{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">Gestion des Produits</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Tableau de bord</a></li>
                <li class="breadcrumb-item active">Produits</li>
            </ol>
        </nav>
    </div>
    <a href="{{ path('app_produit_new') }}" class="btn btn-primary">
        <i class="bx bx-plus"></i> Nouveau Produit
    </a>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Liste des Produits</h5>
        </div>

        <!-- Filtres -->
        <div class="card-body border-bottom">
          <form method="GET" class="row g-3">
            <div class="col-md-4">
              <input 
                type="text" 
                name="search" 
                class="form-control form-control-sm" 
                placeholder="Rechercher par nom ou ref..."
                value="{{ search }}"
              >
            </div>

            <div class="col-md-3">
              <select name="categorie" class="form-select form-select-sm">
                <option value="">Toutes les catégories</option>
                {% for cat in categories %}
                  <option value="{{ cat.id }}" {% if categorie == cat.id %}selected{% endif %}>
                    {{ cat.name }}
                  </option>
                {% endfor %}
              </select>
            </div>

            <div class="col-md-3">
              <select name="sortBy" class="form-select form-select-sm">
                <option value="createdAt" {% if sortBy == 'createdAt' %}selected{% endif %}>Date création</option>
                <option value="nom" {% if sortBy == 'nom' %}selected{% endif %}>Nom</option>
                <option value="prix" {% if sortBy == 'prix' %}selected{% endif %}>Prix</option>
                <option value="quantite" {% if sortBy == 'quantite' %}selected{% endif %}>Stock</option>
              </select>
            </div>

            <div class="col-md-2">
              <select name="sortOrder" class="form-select form-select-sm">
                <option value="DESC" {% if sortOrder == 'DESC' %}selected{% endif %}>Descendant</option>
                <option value="ASC" {% if sortOrder == 'ASC' %}selected{% endif %}>Ascendant</option>
              </select>
            </div>

            <div class="col-12">
              <button type="submit" class="btn btn-sm btn-outline-primary">
                <i class="bx bx-search"></i> Rechercher
              </button>
              <a href="{{ path('app_produit_index') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bx bx-reset"></i> Réinitialiser
              </a>
            </div>
          </form>
        </div>

        <!-- Tableau -->
        <div class="table-responsive">
          <table class="table table-sm table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Référence</th>
                <th>Catégorie</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Statut</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% if produits|length > 0 %}
                {% for produit in produits %}
                  <tr>
                    <td>
                      {% if produit.image %}
                        <img 
                          src="{{ asset('uploads/images/' ~ produit.image) }}" 
                          alt="{{ produit.nom }}" 
                          class="img-fluid"
                          style="max-width: 50px; height: auto;"
                          onerror="this.src='{{ asset('images/placeholder.png') }}'"
                        >
                      {% else %}
                        <span class="badge bg-light text-dark">No image</span>
                      {% endif %}
                    </td>
                    <td>
                      <strong>{{ produit.nom }}</strong>
                      {% if produit.description %}
                        <br><small class="text-muted">{{ produit.description|slice(0, 50) }}...</small>
                      {% endif %}
                    </td>
                    <td><code>{{ produit.reference }}</code></td>
                    <td>
                      {% if produit.categorie %}
                        <span class="badge bg-info">{{ produit.categorie.name }}</span>
                      {% else %}
                        <span class="badge bg-warning">Sans catégorie</span>
                      {% endif %}
                    </td>
                    <td>
                      <strong class="text-success">{{ produit.prix|number_format(2, ',', ' ') }} DTN</strong>
                    </td>
                    <td>
                      {% if produit.quantite <= 10 %}
                        <span class="badge bg-danger">{{ produit.quantite }}</span>
                      {% elseif produit.quantite <= 50 %}
                        <span class="badge bg-warning">{{ produit.quantite }}</span>
                      {% else %}
                        <span class="badge bg-success">{{ produit.quantite }}</span>
                      {% endif %}
                    </td>
                    <td>
                      {% if produit.expirationDate %}
                        {% set now = 'now'|date('Y-m-d') %}
                        {% set futureDate = 'now'|date_modify('+30 days')|date('Y-m-d') %}
                        {% if produit.expirationDate|date('Y-m-d') < now %}
                          <span class="badge bg-danger">Expiré</span>
                        {% elseif produit.expirationDate|date('Y-m-d') < futureDate %}
                          <span class="badge bg-warning">Expire bientôt</span>
                        {% else %}
                          <span class="badge bg-success">Actif</span>
                        {% endif %}
                      {% else %}
                        <span class="badge bg-secondary">N/A</span>
                      {% endif %}
                    </td>
                    <td>
                      <div class="btn-group btn-group-sm" role="group">
                        <a 
                          href="{{ path('app_produit_show', {'id': produit.id}) }}" 
                          class="btn btn-sm btn-outline-info"
                          title="Voir"
                        >
                          <i class="bx bx-show"></i>
                        </a>
                        <a 
                          href="{{ path('app_produit_edit', {'id': produit.id}) }}" 
                          class="btn btn-sm btn-outline-warning"
                          title="Modifier"
                        >
                          <i class="bx bx-edit"></i>
                        </a>
                        <form 
                          method="POST" 
                          action="{{ path('app_produit_delete', {'id': produit.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('Êtes-vous sûr?');"
                        >
                          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                          <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                            <i class="bx bx-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              {% else %}
                <tr>
                  <td colspan="8" class="text-center text-muted py-4">
                    <i class="bx bx-inbox"></i> Aucun produit trouvé
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
{% endblock %}
