{% extends 'base_simple.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">Ajouter un Produit</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Tableau de bord</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_produit_index') }}">Produits</a></li>
                <li class="breadcrumb-item active">Nouveau</li>
            </ol>
        </nav>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bx bx-plus-circle"></i> Ajouter un produit
          </h5>
        </div>

        <div class="card-body">
          {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="mb-3">
              {{ form_label(form.nom, 'Nom du produit') }}
              {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Paracétamol 500mg'}}) }}
              {{ form_errors(form.nom) }}
            </div>

            <div class="mb-3">
              {{ form_label(form.description, 'Description') }}
              {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Description détaillée du produit...'}}) }}
              {{ form_errors(form.description) }}
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="mb-3">
                  {{ form_label(form.prix, 'Prix (DTN)') }}
                  {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'step': '0.01', 'placeholder': '0.00'}}) }}
                  {{ form_errors(form.prix) }}
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  {{ form_label(form.quantite, 'Quantité') }}
                  {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'type': 'number', 'placeholder': '0'}}) }}
                  {{ form_errors(form.quantite) }}
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  {{ form_label(form.categorie, 'Catégorie') }}
                  {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
                  {{ form_errors(form.categorie) }}
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  {{ form_label(form.dateExpiration, 'Date d\'expiration') }}
                  {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.dateExpiration) }}
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  {{ form_label(form.image, 'Image du produit') }}
                  <div class="input-group">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control', 'accept': 'image/*', 'id': 'imageInput'}}) }}
                  </div>
                  {{ form_errors(form.image) }}
                  <small class="text-muted d-block mt-2">PNG, JPG, GIF, WebP (max 5MB)</small>
                  <!-- Image preview container -->
                  <div id="imagePreview" class="mt-3" style="display: flex; justify-content: center; align-items: center;">
                    <img id="previewImg" src="" alt="Aperçu" style="max-width: 100%; max-height: 250px; border-radius: 12px; display: none; border: 2px solid #e0e0e0; box-shadow: 0 2px 8px rgba(0,0,0,0.1); padding: 4px; background: #f8f9fa;">
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-3">
              {{ form_label(form.etatStock, 'État du Stock') }}
              {{ form_widget(form.etatStock, {'attr': {'class': 'form-select', 'id': 'produit_etatStock'}}) }}
              {{ form_errors(form.etatStock) }}
            </div>

            <div id="promotionPourcentageWrapper" class="mb-3" style="display: none;">
              {{ form_label(form.promotionPourcentage, 'Pourcentage de promotion (%)') }}
              {{ form_widget(form.promotionPourcentage, {'attr': {'class': 'form-control', 'min': 1, 'max': 100, 'placeholder': 'Ex: 20'}}) }}
              {{ form_errors(form.promotionPourcentage) }}
            </div>

            <div class="d-flex gap-2 mt-4">
              <button type="submit" class="btn btn-success btn-lg">
                <i class="bx bx-plus"></i> Ajouter +
              </button>
              <a href="{{ path('app_produit_index') }}" class="btn btn-secondary btn-lg">
                <i class="bx bx-arrow-back"></i> Annuler
              </a>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Image preview functionality
  var imageInput = document.getElementById('imageInput');
  if (imageInput) {
    imageInput.addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(event) {
          const img = document.getElementById('previewImg');
          if (img) { img.src = event.target.result; img.style.display = 'block'; }
        };
        reader.readAsDataURL(file);
      }
    });
  }

  // Afficher le champ pourcentage de promotion uniquement quand "En promotion" est sélectionné
  var etatSelect = document.getElementById('produit_etatStock') || document.getElementById('produit1_etatStock') || document.querySelector('select[name*="etatStock"]');
  var promoWrapper = document.getElementById('promotionPourcentageWrapper');
  function togglePromo() {
    if (!promoWrapper) return;
    var isPromo = etatSelect && (etatSelect.value === 'en_promotion');
    promoWrapper.style.display = isPromo ? 'block' : 'none';
  }
  if (etatSelect) {
    etatSelect.addEventListener('change', togglePromo);
    togglePromo();
  }
});
</script>
{% endblock %}
