{% extends 'base.html.twig' %}

{% block title %}Éditer Réponse{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <h4 class="py-3 mb-4">Éditer la Réponse</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">{{ reponse.reclamation.titre }}</h5>
                    <small class="text-muted d-block mt-1">Réclamation #{{ reponse.reclamation.id }}</small>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="mb-3">
                            <label for="contenu" class="form-label">Contenu de la Réponse *</label>
                            <textarea class="form-control" id="contenu" name="contenu" rows="6" required>{{ reponse.contenu }}</textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('admin_reponse_index', {'id': reponse.reclamation.id}) }}" 
                               class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">Sauvegarder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


            </div>
        </div>
    </div>
</div>
{% endblock %}
