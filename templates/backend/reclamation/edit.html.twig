{% extends 'base.html.twig' %}

{% block title %}Éditer Statut - {{ reclamation.titre }}{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <h4 class="py-3 mb-4">Modifier le Statut de la Réclamation</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">{{ reclamation.titre }}</h5>
                    <small class="text-muted d-block mt-1">#{{ reclamation.id }}</small>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="mb-3">
                            <label for="statut" class="form-label">Statut *</label>
                            <select class="form-control form-select" id="statut" name="statut" required>
                                <option value="En attente" {% if reclamation.statut == 'En attente' %}selected{% endif %}>
                                    ⏳ En attente
                                </option>
                                <option value="En cours" {% if reclamation.statut == 'En cours' %}selected{% endif %}>
                                    ⚙️ En cours
                                </option>
                                <option value="Resolu" {% if reclamation.statut == 'Resolu' %}selected{% endif %}>
                                    ✅ Résolu
                                </option>
                            </select>
                        </div>

                        

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('admin_reclamation_show', {'id': reclamation.id}) }}" 
                               class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">Sauvegarder</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informations de la Réclamation</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Date de création:</strong> {{ reclamation.dateCreation|date('d/m/Y H:i') }}</p>
                    <p class="mb-0"><strong>Description:</strong> {{ reclamation.description|slice(0, 100) }}...</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
