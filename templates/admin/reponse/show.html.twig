{% extends 'base_simple.html.twig' %}

{% block title %}Détails Réponse #{{ reponse.id }} - Pharmax Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <a href="{{ path('admin_reclamation_show', {'id': reponse.reclamation.id}) }}" class="btn btn-secondary mb-3">
            <i class="bx bx-arrow-back"></i> Retour
        </a>
    </div>
</div>

<div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bx bx-message"></i> Réponse #{{ reponse.id }}
                    </h5>
                    <small class="text-muted">{{ reponse.dateReponse|date('d/m/Y à H:i') }}</small>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4" role="alert">
                        <i class="bx bx-info-circle"></i>
                        <strong>Réclamation :</strong> 
                        <a href="{{ path('admin_reclamation_show', {'id': reponse.reclamation.id}) }}">
                            #{{ reponse.reclamation.id }} - {{ reponse.reclamation.titre }}
                        </a>
                    </div>

                    <div class="mb-4">
                        <h6 class="mb-3 fw-bold">Contenu:</h6>
                        <div class="bg-light p-3 rounded">
                            {{ reponse.contenu|nl2br }}
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="{{ path('admin_reponse_edit', {'id': reponse.id}) }}" class="btn btn-warning">
                            <i class="bx bx-edit"></i> Éditer
                        </a>
                        <form method="POST" action="{{ path('admin_reponse_delete', {'id': reponse.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                            <button type="submit" class="btn btn-danger" 
                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réponse ?')">
                                <i class="bx bx-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
