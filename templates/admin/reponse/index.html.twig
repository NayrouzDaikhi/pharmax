{% extends 'base_simple.html.twig' %}

{% block title %}Gestion des R√©ponses - Pharmax Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h4 class="py-3 mb-4">üîß Gestion des R√©ponses</h4>
    </div>
</div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <!-- Recherche combin√©e par Contenu et R√©clamation -->
                <div class="col-md-4">
                    <label for="search" class="form-label">Contenu / R√©clamation</label>
                    <input type="text"
                           class="form-control"
                           id="search"
                           name="search"
                           placeholder="Rechercher par contenu ou r√©clamation..."
                           value="{{ filters.search|default('') }}">
                </div>

                <!-- Filtre par date -->
                <div class="col-md-2">
                    <label for="date" class="form-label">Date</label>
                    <input type="date"
                           class="form-control"
                           id="date"
                           name="date"
                           value="{{ filters.date|default('') }}">
                </div>

                <!-- Trier par -->
                <div class="col-md-2">
                    <label for="sortBy" class="form-label">Trier par</label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="r.dateReponse" {% if sortBy == 'r.dateReponse' %}selected{% endif %}>Date (d√©faut)</option>
                        <option value="r.contenu" {% if sortBy == 'r.contenu' %}selected{% endif %}>Contenu</option>
                        <option value="rec.titre" {% if sortBy == 'rec.titre' %}selected{% endif %}>R√©clamation</option>
                    </select>
                </div>

                <!-- Ordre de tri -->
                <div class="col-md-2">
                    <label for="sortOrder" class="form-label">Ordre</label>
                    <select class="form-select" id="sortOrder" name="sortOrder">
                        <option value="DESC" {% if sortOrder == 'DESC' %}selected{% endif %}>‚Üì DESC</option>
                        <option value="ASC" {% if sortOrder == 'ASC' %}selected{% endif %}>‚Üë ASC</option>
                    </select>
                </div>

                <!-- Boutons -->
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bx bx-search"></i> 
                    </button>
                </div>
            </form>
        </div>
    </div>

    {% if reponses is not empty %}
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a href="{{ path('admin_reponse_index', {
                                search: filters.search,
                                date: filters.date,
                                sortBy: 'r.contenu',
                                sortOrder: (sortBy == 'r.contenu' ? nextSortOrder : 'ASC')
                            }) }}" style="text-decoration: none; color: inherit;">
                                Contenu
                                {% if sortBy == 'contenu' %}
                                    <i class="bx bx-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                {% endif %}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('admin_reponse_index', {
                                search: filters.search,
                                date: filters.date,
                                sortBy: 'rec.titre',
                                sortOrder: (sortBy == 'rec.titre' ? nextSortOrder : 'ASC')
                            }) }}" style="text-decoration: none; color: inherit;">
                                R√©clamation
                                {% if sortBy == 'reclamation' %}
                                    <i class="bx bx-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                {% endif %}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('admin_reponse_index', {
                                search: filters.search,
                                date: filters.date,
                                sortBy: 'r.dateReponse',
                                sortOrder: (sortBy == 'r.dateReponse' ? nextSortOrder : 'ASC')
                            }) }}" style="text-decoration: none; color: inherit;">
                                Date
                                {% if sortBy == 'dateReponse' %}
                                    <i class="bx bx-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                {% endif %}
                            </a>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    {% for reponse in reponses %}
                    <tr>
                        <td>
                            {{ reponse.contenu|length > 50 
                                ? reponse.contenu|slice(0, 50) ~ '...' 
                                : reponse.contenu }}
                        </td>

                        <td>
                            <a href="{{ path('admin_reclamation_show', {'id': reponse.reclamation.id}) }}">
                                {{ reponse.reclamation.titre|slice(0, 50) }}{% if reponse.reclamation.titre|length > 50 %}...{% endif %}
                            </a>
                        </td>

                        <td>{{ reponse.dateReponse|date('d/m/Y H:i') }}</td>

                        <td>
                            <a href="{{ path('admin_reponse_edit', {'id': reponse.id}) }}"
                               class="btn btn-sm btn-warning">
                                <i class="bx bx-edit"></i> √âditer
                            </a>

                            <form method="POST"
                                  action="{{ path('admin_reponse_delete', {'id': reponse.id}) }}"
                                  style="display:inline;">
                                <input type="hidden"
                                       name="_token"
                                       value="{{ csrf_token('delete' ~ reponse.id) }}">
                                <button type="submit"
                                        class="btn btn-sm btn-danger"
                                        onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette r√©ponse ?')">
                                    <i class="bx bx-trash"></i> Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="card-footer">
            <nav aria-label="pagination" class="d-flex justify-content-between align-items-center">
                <div class="pagination">
                    {% set currentPage = reponses.currentPageNumber %}
                    {% set itemsPerPage = reponses.itemNumberPerPage %}
                    {% set totalItems = reponses.totalItemCount %}
                    {% set totalPages = (totalItems / itemsPerPage)|round(0, 'ceil') %}

                    {% if currentPage > 1 %}
                        <a class="page-link" href="{{ path('admin_reponse_index', {
                            search: filters.search,
                            date: filters.date,
                            sortBy: sortBy,
                            sortOrder: sortOrder,
                            page: currentPage - 1
                        }) }}">
                            <i class="bx bx-chevron-left"></i> Pr√©c√©dent
                        </a>
                    {% else %}
                        <span class="page-link disabled"><i class="bx bx-chevron-left"></i> Pr√©c√©dent</span>
                    {% endif %}

                    {% for page_num in reponses.paginationData.pageRange %}
                        {% if page_num %}
                            {% if page_num == currentPage %}
                                <span class="page-link active">{{ page_num }}</span>
                            {% else %}
                                <a class="page-link" href="{{ path('admin_reponse_index', {
                                    search: filters.search,
                                    date: filters.date,
                                    sortBy: sortBy,
                                    sortOrder: sortOrder,
                                    page: page_num
                                }) }}">{{ page_num }}</a>
                            {% endif %}
                        {% else %}
                            <span class="page-link disabled">...</span>
                        {% endif %}
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <a class="page-link" href="{{ path('admin_reponse_index', {
                            search: filters.search,
                            date: filters.date,
                            sortBy: sortBy,
                            sortOrder: sortOrder,
                            page: currentPage + 1
                        }) }}">Suivant <i class="bx bx-chevron-right"></i></a>
                    {% else %}
                        <span class="page-link disabled">Suivant <i class="bx bx-chevron-right"></i></span>
                    {% endif %}
                </div>

                <div class="text-muted">
                    <small>
                        {% set firstItemNumber = ((currentPage - 1) * itemsPerPage) + 1 %}
                        {% set lastItemNumber = currentPage * itemsPerPage > totalItems ? totalItems : currentPage * itemsPerPage %}
                        Affichage {{ firstItemNumber }} √† {{ lastItemNumber }} sur {{ totalItems }} r√©sultats
                    </small>
                </div>
            </nav>
        </div>
    </div>
    {% else %}
    <div class="alert alert-info" role="alert">
        <i class="bx bx-info-circle"></i> Aucune r√©ponse trouv√©e
    </div>
    {% endif %}
{% endblock %}
