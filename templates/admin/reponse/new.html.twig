{% extends 'base_simple.html.twig' %}

{% block title %}Nouvelle Réponse - Pharmax Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <a href="{{ path('admin_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-secondary mb-3">
            <i class="bx bx-arrow-back"></i> Retour
        </a>
    </div>
</div>

<div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bx bx-plus-circle"></i> Nouvelle Réponse
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4" role="alert">
                        <i class="bx bx-info-circle"></i>
                        <strong>Réclamation :</strong> {{ reclamation.titre }}
                    </div>

                    <form method="POST">
                        <div class="mb-4">
                            <label for="contenu" class="form-label fw-bold">Contenu de la Réponse <span class="text-danger">*</span></label>
                            <textarea class="form-control" 
                                      id="contenu" 
                                      name="contenu" 
                                      rows="6"
                                      placeholder="Écrivez votre réponse..."
                                      required></textarea>
                            <small class="form-text text-muted">Les balises HTML seront automatiquement supprimées pour des raisons de sécurité</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bx bx-send"></i> Envoyer la Réponse
                            </button>
                            <a href="{{ path('admin_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-outline-secondary">
                                <i class="bx bx-x"></i> Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
