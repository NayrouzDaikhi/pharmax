{% extends '@EasyAdmin/layout.html.twig' %}

{% block content_header %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Tableau de bord</h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <!-- KPI Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6 class="card-title">Articles</h6>
                        <h2 class="mb-0">{{ stats.total_articles }}</h2>
                        <small>Articles publi√©s</small>
                    </div>
                    <a href="{{ path('admin', {'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\ArticleCrudController'}) }}" class="stretched-link"></a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6 class="card-title">Commentaires</h6>
                        <h2 class="mb-0">{{ stats.total_comments }}</h2>
                        <small>Total des commentaires</small>
                    </div>
                    <a href="{{ path('admin', {'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\CommentaireCrudController'}) }}" class="stretched-link"></a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h6 class="card-title">Likes</h6>
                        <h2 class="mb-0">{{ stats.total_likes }}</h2>
                        <small>J'aimes totaux</small>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h6 class="card-title">En attente</h6>
                        <h2 class="mb-0">{{ stats.comments_by_status.en_attente }}</h2>
                        <small>Commentaires √† mod√©rer</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detailed Stats -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Commentaires par statut</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <h5 class="text-success">{{ stats.comments_by_status.valide }}</h5>
                                <small>Valid√©s</small>
                            </div>
                            <div class="col-4">
                                <h5 class="text-warning">{{ stats.comments_by_status.en_attente }}</h5>
                                <small>En attente</small>
                            </div>
                            <div class="col-4">
                                <h5 class="text-danger">{{ stats.comments_by_status.bloque }}</h5>
                                <small>Bloqu√©s</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Top Articles</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            {% for article in stats.top_articles %}
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>{{ article.titre|truncate(30) }}</span>
                                    <strong class="text-primary">{{ article.likes }} ‚ù§Ô∏è</strong>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Articles les plus comment√©s</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            {% for article in stats.top_commented_articles %}
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>{{ article.titre|truncate(25) }}</span>
                                    <strong class="text-info">{{ article.commentaires|length }} üí¨</strong>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Articles par date (30 jours)</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="articlesDateChart" height="300"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Commentaires par statut</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="commentsStatusChart" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Articles by Date Chart
        const articlesCtx = document.getElementById('articlesDateChart').getContext('2d');
        new Chart(articlesCtx, {
            type: 'line',
            data: {
                labels: {{ articles_date_chart.labels|json_encode }},
                datasets: [{
                    label: 'Articles publi√©s',
                    data: {{ articles_date_chart.data|json_encode }},
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0, 123, 255, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Comments Status Chart
        const commentsCtx = document.getElementById('commentsStatusChart').getContext('2d');
        new Chart(commentsCtx, {
            type: 'doughnut',
            data: {
                labels: {{ comments_status_chart.labels|json_encode }},
                datasets: [{
                    data: {{ comments_status_chart.data|json_encode }},
                    backgroundColor: {{ comments_status_chart.colors|json_encode }}
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>
{% endblock %}
