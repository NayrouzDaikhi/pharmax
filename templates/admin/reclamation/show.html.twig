<!-- JavaScript pour la traduction -->
<script>
document.getElementById('translateBtn').addEventListener('click', function(e) {
    e.preventDefault();
    const dropdown = document.getElementById('translateDropdown');
    dropdown.style.display = dropdown.style.display === 'none' ? 'block' : 'none';
});

document.querySelectorAll('.translate-option').forEach(link => {
    link.addEventListener('click', function(e) {
        e.preventDefault();
        const lang = this.getAttribute('data-lang');
        translate(lang);
        document.getElementById('translateDropdown').style.display = 'none';
    });
});

document.getElementById('closeTranslation').addEventListener('click', function() {
    document.getElementById('translationSection').style.display = 'none';
});

function translate(lang) {
    const titre = document.getElementById('translationData').getAttribute('data-titre');
    const description = document.getElementById('translationData').getAttribute('data-description');
    
    // Afficher un indicateur de chargement
    document.getElementById('translatedTitre').textContent = 'Traduction en cours...';
    document.getElementById('translatedDescription').textContent = 'Traduction en cours...';
    
    // Traduire le titre
    fetch('{{ path("api_translate") }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            text: titre,
            lang: lang
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            document.getElementById('translatedTitre').textContent = data.translated;
        }
    })
    .catch(error => {
        document.getElementById('translatedTitre').textContent = 'Erreur de traduction';
        console.error('Erreur:', error);
    });

    // Traduire la description
    fetch('{{ path("api_translate") }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            text: description,
            lang: lang
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            document.getElementById('translatedDescription').textContent = data.translated;
        }
    })
    .catch(error => {
        document.getElementById('translatedDescription').textContent = 'Erreur de traduction';
        console.error('Erreur:', error);
    });

    // Afficher la langue
    const langNames = {
        'en': 'Anglais',
        'es': 'Espagnol',
        'de': 'Allemand',
        'it': 'Italien',
        'pt': 'Portugais',
        'ja': 'Japonais',
        'zh': 'Chinois',
        'ar': 'Arabe',
        'ru': 'Russe'
    };
    
    document.getElementById('translatedLangName').textContent = langNames[lang] || lang.toUpperCase();
    document.getElementById('translationSection').style.display = 'block';
}
</script>

