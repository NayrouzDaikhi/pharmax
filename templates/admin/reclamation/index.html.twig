{% extends 'base_simple.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h4 class="py-3 mb-4">üîß Gestion des R√©clamations</h4>
    </div>
</div>

    <!-- Statistiques Cartes -->
    <div class="row mb-4">
        <!-- R√©clamations Total -->
        <div class="col-md-3 col-6 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm h-100 stat-card stat-card-primary">
                <div class="card-body text-center">
                    <div class="stat-icon mb-3">
                        <i class="bx bx-file-find fs-1 text-primary"></i>
                    </div>
                    <h6 class="text-muted mb-2">R√©clamations Totales</h6>
                    <h2 class="mb-0 fw-bold">{{ stats.total|default(0) }}</h2>
                </div>
            </div>
        </div>
        
        <!-- En Attente -->
        <div class="col-md-3 col-6 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm h-100 stat-card stat-card-warning">
                <div class="card-body text-center">
                    <div class="stat-icon mb-3">
                        <i class="bx bx-time-five fs-1 text-warning"></i>
                    </div>
                    <h6 class="text-muted mb-2">En Attente</h6>
                    <h2 class="mb-0 fw-bold">{{ stats.en_attente|default(0) }}</h2>
                </div>
            </div>
        </div>
        
        <!-- En Cours -->
        <div class="col-md-3 col-6 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm h-100 stat-card stat-card-info">
                <div class="card-body text-center">
                    <div class="stat-icon mb-3">
                        <i class="bx bx-loader-circle fs-1 text-info"></i>
                    </div>
                    <h6 class="text-muted mb-2">En Cours</h6>
                    <h2 class="mb-0 fw-bold">{{ stats.en_cours|default(0) }}</h2>
                </div>
            </div>
        </div>
        
        <!-- R√©solu -->
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow-sm h-100 stat-card stat-card-success">
                <div class="card-body text-center">
                    <div class="stat-icon mb-3">
                        <i class="bx bx-check-circle fs-1 text-success"></i>
                    </div>
                    <h6 class="text-muted mb-2">R√©solu</h6>
                    <h2 class="mb-0 fw-bold">{{ stats.resolu|default(0) }}</h2>
                </div>
            </div>
        </div>
    </div>

    <style>
        .stat-card {
            transition: all 0.3s ease;
            border-radius: 0.5rem;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
        }

        .stat-icon {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 60px;
            height: 60px;
            border-radius: 0.5rem;
            background: rgba(0, 0, 0, 0.05);
        }

        .stat-card-primary .stat-icon {
            background-color: rgba(13, 110, 253, 0.1);
        }

        .stat-card-warning .stat-icon {
            background-color: rgba(255, 193, 7, 0.1);
        }

        .stat-card-info .stat-icon {
            background-color: rgba(23, 162, 184, 0.1);
        }

        .stat-card-success .stat-icon {
            background-color: rgba(40, 167, 69, 0.1);
        }

        .stat-card h2 {
            font-size: 2rem;
            line-height: 1.2;
        }
    </style>

    <!-- Filtres -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" id="filterForm" class="row g-3">
                <div class="col-md-4">
                    <label for="search" class="form-label">Titre / Utilisateur</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Rechercher par titre ou utilisateur..." value="{{ filters.search|default('') }}">
                </div>
                <div class="col-md-2">
                    <label for="statut" class="form-label">Statut</label>
                    <select class="form-select" id="statut" name="statut">
                        <option value="">-- Tous --</option>
                        <option value="En attente" {% if filters.statut == 'En attente' %}selected{% endif %}>En attente</option>
                        <option value="En cours" {% if filters.statut == 'En cours' %}selected{% endif %}>En cours</option>
                        <option value="Resolu" {% if filters.statut == 'Resolu' %}selected{% endif %}>R√©solu</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" name="date" value="{{ filters.date|default('') }}">
                </div>
                <div class="col-md-2">
                    <label for="sortBy" class="form-label">Trier par</label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="r.dateCreation" {% if sortBy == 'r.dateCreation' %}selected{% endif %}>Date (d√©faut)</option>
                        <option value="r.titre" {% if sortBy == 'r.titre' %}selected{% endif %}>Titre</option>
                        <option value="u.firstName" {% if sortBy == 'u.firstName' %}selected{% endif %}>Utilisateur</option>
                        <option value="r.statut" {% if sortBy == 'r.statut' %}selected{% endif %}>Statut</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <label for="sortOrder" class="form-label">Ordre</label>
                    <select class="form-select" id="sortOrder" name="sortOrder">
                        <option value="DESC" {% if sortOrder == 'DESC' %}selected{% endif %}>‚Üì DESC</option>
                        <option value="ASC" {% if sortOrder == 'ASC' %}selected{% endif %}>‚Üë ASC</option>
                    </select>
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bx bx-search"></i> 
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    {% if reclamations %}
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a href="{{ path('admin_reclamation_index', {
                                search: filters.search,
                                statut: filters.statut,
                                date: filters.date,
                                sortBy: 'r.titre',
                                sortOrder: (sortBy == 'r.titre' ? nextSortOrder : 'ASC')
                            }) }}" style="text-decoration: none; color: inherit;">
                                Titre
                                {% if sortBy == 'titre' %}
                                    <i class="bx bx-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                {% endif %}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('admin_reclamation_index', {
                                search: filters.search,
                                statut: filters.statut,
                                date: filters.date,
                                sortBy: 'u.firstName',
                                sortOrder: (sortBy == 'u.firstName' ? nextSortOrder : 'ASC')
                            }) }}" style="text-decoration: none; color: inherit;">
                                Utilisateur
                                {% if sortBy == 'utilisateur' %}
                                    <i class="bx bx-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                {% endif %}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('admin_reclamation_index', {
                                search: filters.search,
                                statut: filters.statut,
                                date: filters.date,
                                sortBy: 'r.statut',
                                sortOrder: (sortBy == 'r.statut' ? nextSortOrder : 'ASC')
                            }) }}" style="text-decoration: none; color: inherit;">
                                Statut
                                {% if sortBy == 'statut' %}
                                    <i class="bx bx-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                {% endif %}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('admin_reclamation_index', {
                                search: filters.search,
                                statut: filters.statut,
                                date: filters.date,
                                sortBy: 'r.dateCreation',
                                sortOrder: (sortBy == 'r.dateCreation' ? nextSortOrder : 'ASC')
                            }) }}" style="text-decoration: none; color: inherit;">
                                Date
                                {% if sortBy == 'dateCreation' %}
                                    <i class="bx bx-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                {% endif %}
                            </a>
                        </th>
                        <th>R√©ponses</th>
                        <th>Message de r√©ponse</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    {% for reclamation in reclamations %}
                    <tr>
                        <td>{{ reclamation.titre }}</td>
                        <td>
                            {% if reclamation.user %}
                                <i class="bx bx-user"></i> {{ reclamation.user.firstName ?? 'N/A' }}<br>
                                <small class="text-muted">{{ reclamation.user.email ?? '' }}</small>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if reclamation.statut == 'En attente' %}
                                <span class="badge bg-label-warning">En attente</span>
                            {% elseif reclamation.statut == 'En cours' %}
                                <span class="badge bg-label-info">En cours</span>
                            {% else %}
                                <span class="badge bg-label-success">R√©solu</span>
                            {% endif %}
                        </td>
                        <td>{{ reclamation.dateCreation|date('d/m/Y H:i') }}</td>
                        <td><span class="badge bg-label-primary">{{ reclamation.reponses|length }}</span></td>
                        <td>
                            {% if reclamation.statut == 'Resolu' and reclamation.reponses|length > 0 %}
                                {% set reponseResolu = reclamation.reponses|first %}
                                <span class="text-muted" title="{{ reponseResolu.contenu }}" style="font-size: 0.9rem; max-width: 200px; display: inline-block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    {{ reponseResolu.contenu|slice(0, 80) }}{% if reponseResolu.contenu|length > 80 %}...{% endif %}
                                </span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('admin_reclamation_show', {'id': reclamation.id}) }}" 
                               class="btn btn-sm btn-info">
                                <i class="bx bx-detail"></i> Voir
                            </a>
                            <a href="{{ path('admin_reclamation_edit', {'id': reclamation.id}) }}" 
                               class="btn btn-sm btn-warning">
                                <i class="bx bx-edit"></i> √âditer
                            </a>
                            <form method="POST" action="{{ path('admin_reclamation_delete', {'id': reclamation.id}) }}" 
                                  style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('√ätes-vous s√ªr?')">
                                    <i class="bx bx-trash"></i> Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        <div class="card-footer">
            <nav aria-label="pagination" class="d-flex justify-content-between align-items-center">
                <div class="pagination">
                    {% set currentPage = reclamations.currentPageNumber %}
                    {% set itemsPerPage = reclamations.itemNumberPerPage %}
                    {% set totalItems = reclamations.totalItemCount %}
                    {% set totalPages = (totalItems / itemsPerPage)|round(0, 'ceil') %}

                    {# Lien Pr√©c√©dent #}
                    {% if currentPage > 1 %}
                        <a class="page-link" href="{{ path('admin_reclamation_index', {
                            search: filters.search,
                            statut: filters.statut,
                            date: filters.date,
                            sortBy: sortBy,
                            sortOrder: sortOrder,
                            page: currentPage - 1
                        }) }}">
                            <i class="bx bx-chevron-left"></i> Pr√©c√©dent
                        </a>
                    {% else %}
                        <span class="page-link disabled">
                            <i class="bx bx-chevron-left"></i> Pr√©c√©dent
                        </span>
                    {% endif %}

                    {# Num√©ros de pages #}
                    {% for page_num in reclamations.paginationData.pageRange %}
                        {% if page_num %}
                            {% if page_num == currentPage %}
                                <span class="page-link active">
                                    {{ page_num }}
                                </span>
                            {% else %}
                                <a class="page-link" href="{{ path('admin_reclamation_index', {
                                    search: filters.search,
                                    statut: filters.statut,
                                    date: filters.date,
                                    sortBy: sortBy,
                                    sortOrder: sortOrder,
                                    page: page_num
                                }) }}">
                                    {{ page_num }}
                                </a>
                            {% endif %}
                        {% else %}
                            <span class="page-link disabled">...</span>
                        {% endif %}
                    {% endfor %}

                    {# Lien Suivant #}
                    {% if currentPage < totalPages %}
                        <a class="page-link" href="{{ path('admin_reclamation_index', {
                            search: filters.search,
                            statut: filters.statut,
                            date: filters.date,
                            sortBy: sortBy,
                            sortOrder: sortOrder,
                            page: currentPage + 1
                        }) }}">
                            Suivant <i class="bx bx-chevron-right"></i>
                        </a>
                    {% else %}
                        <span class="page-link disabled">
                            Suivant <i class="bx bx-chevron-right"></i>
                        </span>
                    {% endif %}
                </div>

                <div class="text-muted">
                    <small>
                        {% set firstItemNumber = ((currentPage - 1) * itemsPerPage) + 1 %}
                        {% set lastItemNumber = currentPage * itemsPerPage > totalItems ? totalItems : currentPage * itemsPerPage %}
                        Affichage {{ firstItemNumber }} √† {{ lastItemNumber }} 
                        sur {{ totalItems }} r√©sultats
                    </small>
                </div>
            </nav>
        </div>
    </div>
    {% else %}
    <div class="alert alert-info" role="alert">
        <i class="bx bx-info-circle"></i> Aucune r√©clamation trouv√©e
    </div>
    {% endif %}
{% endblock %}
