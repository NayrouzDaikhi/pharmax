{% extends 'front_base.html.twig' %}

{% block title %}Blog - Pharmax{% endblock %}

{% block extra_css %}
<style>
    /* Blog-specific styles */
    .search-section {
        padding: 30px 0;
        background: white;
        border-bottom: 1px solid #e0e0e0;
        margin-bottom: 40px;
    }

    .search-section .container-xxl {
        max-width: 1000px;
        margin: 0 auto;
    }

    .search-section form {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .search-section input,
    .search-section button {
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 14px;
    }

    .search-section input {
        flex: 1;
        min-width: 200px;
    }

    .search-section button {
        background: #27ae60;
        color: white;
        border: none;
        cursor: pointer;
        transition: background 0.3s;
    }

    .search-section button:hover {
        background: #229954;
    }

    .btn-clear {
        background: #e74c3c;
        color: white;
        cursor: pointer;
    }

    .btn-clear:hover {
        background: #c0392b;
    }

    /* Posts Grid */
    .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 30px;
        margin-bottom: 50px;
        max-width: 1000px;
        margin-left: auto;
        margin-right: auto;
    }

    .post-card {
        background: white;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .post-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(39, 174, 96, 0.15);
        border-color: #27ae60;
    }

    .post-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, #27ae60 0%, #3498db 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .post-content {
        padding: 20px;
    }

    .post-title {
        font-size: 18px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .post-date {
        font-size: 12px;
        color: #27ae60;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 10px;
    }

    .post-excerpt {
        font-size: 14px;
        color: #666;
        margin-bottom: 15px;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .post-actions {
        display: flex;
        gap: 10px;
        justify-content: space-between;
        border-top: 1px solid #e0e0e0;
        padding-top: 15px;
    }

    .btn-like, .btn-read-later {
        flex: 1;
        padding: 8px;
        border: 1px solid #ddd;
        background: white;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s;
        font-size: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

    .btn-like:hover, .btn-read-later:hover {
        background: #f0f0f0;
    }

    .btn-like.active {
        background: #e74c3c;
        color: white;
        border-color: #e74c3c;
    }

    .btn-read-later.active {
        background: #27ae60;
        color: white;
        border-color: #27ae60;
    }

    .btn-read {
        padding: 8px 12px;
        background: #3498db;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 12px;
        transition: background 0.3s;
    }

    .btn-read:hover {
        background: #2980b9;
    }

    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 50px;
        margin-bottom: 40px;
    }

    .pagination {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .pagination-btn, .pagination-page {
        padding: 8px 12px;
        border: 1px solid #ddd;
        background: white;
        cursor: pointer;
        border-radius: 6px;
        transition: all 0.3s;
        font-size: 14px;
    }

    .pagination-btn:hover:not(.disabled) {
        background: #27ae60;
        color: white;
        border-color: #27ae60;
    }

    .pagination-page.active {
        background: #27ae60;
        color: white;
        border-color: #27ae60;
    }

    .pagination-btn.disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .pagination-pages {
        display: flex;
        gap: 5px;
    }

    .pagination-ellipsis {
        padding: 8px 5px;
    }

    /* No posts message */
    .no-posts {
        text-align: center;
        padding: 60px 20px;
    }

    .no-posts i {
        font-size: 80px;
        color: #ccc;
        display: block;
        margin-bottom: 20px;
    }

    .no-posts h3 {
        color: #999;
        margin-bottom: 10px;
    }

    .no-posts p {
        color: #bbb;
        margin-bottom: 20px;
    }

    /* Carousel Hero */
    .carousel-hero {
        position: relative;
        width: 100%;
        height: 400px;
        background: #2c3e50;
        overflow: hidden;
        margin-bottom: 40px;
    }

    .carousel-slides {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .slide {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 0.6s ease-in-out;
    }

    .slide.active {
        opacity: 1;
    }

    .slide img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .carousel-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0,0,0,0.5);
        color: white;
        border: none;
        padding: 15px 20px;
        cursor: pointer;
        font-size: 24px;
        z-index: 10;
        transition: background 0.3s;
    }

    .carousel-arrow:hover {
        background: rgba(0,0,0,0.8);
    }

    .carousel-arrow.prev {
        left: 20px;
    }

    .carousel-arrow.next {
        right: 20px;
    }

    .carousel-nav {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 10px;
        z-index: 10;
    }

    .carousel-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255,255,255,0.5);
        cursor: pointer;
        transition: background 0.3s;
    }

    .carousel-dot.active {
        background: white;
    }

    /* Show article detail */
    .article-detail {
        max-width: 800px;
        margin: 0 auto 50px;
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .article-header {
        margin-bottom: 30px;
        border-bottom: 2px solid #27ae60;
        padding-bottom: 20px;
    }

    .article-header h1 {
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .article-meta {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        font-size: 14px;
        color: #666;
    }

    .article-body {
        font-size: 16px;
        line-height: 1.8;
        color: #333;
        margin-bottom: 30px;
    }

    .article-body img {
        max-width: 100%;
        height: auto;
        margin: 20px 0;
        border-radius: 8px;
    }

    .article-actions {
        display: flex;
        gap: 15px;
        justify-content: space-between;
        padding-top: 20px;
        border-top: 1px solid #e0e0e0;
    }

    .article-comments {
        margin-top: 40px;
        padding-top: 40px;
        border-top: 2px solid #e0e0e0;
    }

    .articles-list {
        background: white;
        padding: 30px;
        border-radius: 12px;
    }

    .article-item {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #e0e0e0;
    }

    .article-item:last-child {
        border-bottom: none;
    }

    .article-thumbnail {
        width: 150px;
        height: 150px;
        background: linear-gradient(135deg, #27ae60 0%, #3498db 100%);
        border-radius: 8px;
        flex-shrink: 0;
        overflow: hidden;
    }

    .article-thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .article-info {
        flex: 1;
    }

    .article-info h3 {
        margin-bottom: 10px;
        color: #2c3e50;
    }

    .article-info .date {
        font-size: 12px;
        color: #27ae60;
        font-weight: 600;
        margin-bottom: 10px;
    }

    @media (max-width: 768px) {
        .carousel-hero {
            height: 250px;
        }

        .carousel-arrow {
            padding: 10px 15px;
            font-size: 18px;
        }

        .article-detail {
            padding: 20px;
        }

        .article-header h1 {
            font-size: 1.8rem;
        }

        .article-item {
            flex-direction: column;
        }

        .article-thumbnail {
            width: 100%;
            height: 200px;
        }

        .posts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
{% endblock %}

{% block content %}
    <!-- Carousel Hero -->
    <div class="carousel-hero">
        <div class="carousel-slides">
            <div class="slide active">
                <img src="{{ asset('images/1-Medical-Software-Development-Business-Transforming-the-Healthcare-Industry.jpg') }}" alt="Medical Software">
            </div>
            <div class="slide">
                <img src="{{ asset('images/136920.jpg') }}" alt="Healthcare Solutions">
            </div>
            <div class="slide">
                <img src="{{ asset('images/R.jfif') }}" alt="Pharmax Innovation">
            </div>
            <div class="slide">
                <img src="{{ asset('images/wp2655122.jpg') }}" alt="Healthcare Technology">
            </div>
        </div>
        
        <button class="carousel-arrow prev" onclick="prevSlide()">&#10094;</button>
        <button class="carousel-arrow next" onclick="nextSlide()">&#10095;</button>
        
        <div class="carousel-nav">
            <span class="carousel-dot active" onclick="currentSlide(0)"></span>
            <span class="carousel-dot" onclick="currentSlide(1)"></span>
            <span class="carousel-dot" onclick="currentSlide(2)"></span>
            <span class="carousel-dot" onclick="currentSlide(3)"></span>
        </div>
    </div>

    <div class="container-xxl">
        {% block blog_content %}{% endblock %}
    </div>

    <script>
    let currentSlideIndex = 0;
    let autoplayInterval;

    function showSlide(n) {
        const slides = document.querySelectorAll('.slide');
        const dots = document.querySelectorAll('.carousel-dot');
        
        if (n >= slides.length) {
            currentSlideIndex = 0;
        }
        if (n < 0) {
            currentSlideIndex = slides.length - 1;
        }
        
        slides.forEach(slide => slide.classList.remove('active'));
        dots.forEach(dot => dot.classList.remove('active'));
        
        slides[currentSlideIndex].classList.add('active');
        dots[currentSlideIndex].classList.add('active');
    }

    function nextSlide() {
        currentSlideIndex++;
        if (currentSlideIndex >= document.querySelectorAll('.slide').length) {
            currentSlideIndex = 0;
        }
        showSlide(currentSlideIndex);
        resetAutoplay();
    }

    function prevSlide() {
        currentSlideIndex--;
        if (currentSlideIndex < 0) {
            currentSlideIndex = document.querySelectorAll('.slide').length - 1;
        }
        showSlide(currentSlideIndex);
        resetAutoplay();
    }

    function currentSlide(n) {
        currentSlideIndex = n;
        showSlide(currentSlideIndex);
        resetAutoplay();
    }

    function autoplay() {
        currentSlideIndex++;
        if (currentSlideIndex >= document.querySelectorAll('.slide').length) {
            currentSlideIndex = 0;
        }
        showSlide(currentSlideIndex);
    }

    function resetAutoplay() {
        clearInterval(autoplayInterval);
        autoplayInterval = setInterval(autoplay, 5000);
    }

    // Initialize carousel
    showSlide(0);
    autoplayInterval = setInterval(autoplay, 5000);

    // Local storage functions for likes and read-later
    function getLikes() {
        const stored = localStorage.getItem('pharmax-likes');
        return stored ? JSON.parse(stored) : {};
    }

    function saveLikes(likes) {
        localStorage.setItem('pharmax-likes', JSON.stringify(likes));
    }

    function getReadLater() {
        const stored = localStorage.getItem('pharmax-read-later');
        return stored ? JSON.parse(stored) : [];
    }

    function saveReadLater(readLater) {
        localStorage.setItem('pharmax-read-later', JSON.stringify(readLater));
    }

    function toggleLike(articleId, button) {
        const isLiked = button.classList.contains('active');
        const endpoint = isLiked ? `/blog/${articleId}/unlike` : `/blog/${articleId}/like`;
        
        fetch(endpoint, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                if (isLiked) {
                    button.classList.remove('active');
                    button.querySelector('.like-count').textContent = data.likes;
                } else {
                    button.classList.add('active');
                    button.querySelector('.like-count').textContent = data.likes;
                }
            }
        })
        .catch(error => console.error('Error:', error));
    }

    function toggleReadLater(articleId, button) {
        // Check if user is authenticated by looking for a user indicator
        const isAuthenticated = document.body.getAttribute('data-user-authenticated') === 'true' || !!document.querySelector('[data-user-authenticated="true"]');
        
        if (isAuthenticated) {
            // Use server-side API for authenticated users
            const isSaved = button.classList.contains('active');
            const endpoint = isSaved ? `/blog/unsave-article/${articleId}` : `/blog/save-article/${articleId}`;
            
            fetch(endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.saved) {
                        button.classList.add('active');
                        button.querySelector('.read-later-text').textContent = "{{ 'Saved'|trans }}";
                    } else {
                        button.classList.remove('active');
                        button.querySelector('.read-later-text').textContent = "{{ 'Read Later'|trans }}";
                    }
                    updateSavedCount();
                }
            })
            .catch(error => console.error('Error:', error));
        } else {
            // Use localStorage for anonymous users
            const readLater = getReadLater();
            const index = readLater.indexOf(parseInt(articleId));
            
            if (index > -1) {
                readLater.splice(index, 1);
                button.classList.remove('active');
                button.querySelector('.read-later-text').textContent = "{{ 'Read Later'|trans }}";
            } else {
                readLater.push(parseInt(articleId));
                button.classList.add('active');
                button.querySelector('.read-later-text').textContent = "{{ 'Saved'|trans }}";
            }
            
            saveReadLater(readLater);
        }
    }

    function updateSavedCount() {
        const isAuthenticated = document.body.getAttribute('data-user-authenticated') === 'true';
        const countEl = document.getElementById('saved-count');
        
        if (!countEl) return;
        
        if (isAuthenticated) {
            fetch('/blog/saved-articles', {
                headers: {
                    'Accept': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.count && data.count > 0) {
                    countEl.textContent = data.count;
                    countEl.style.display = 'inline';
                } else {
                    countEl.style.display = 'none';
                }
            })
            .catch(error => console.error('Error:', error));
        } else {
            const readLater = getReadLater();
            if (readLater.length > 0) {
                countEl.textContent = readLater.length;
                countEl.style.display = 'inline';
            } else {
                countEl.style.display = 'none';
            }
        }
    }

    function updateLikesDisplay() {
        const likeButtons = document.querySelectorAll('.btn-like');
        const likes = getLikes();

        likeButtons.forEach(btn => {
            const articleId = btn.dataset.articleId;
            if (likes[articleId]) {
                btn.classList.add('active');
                btn.querySelector('.like-count').textContent = likes[articleId];
            } else {
                btn.classList.remove('active');
                btn.querySelector('.like-count').textContent = '0';
            }
        });

        const readLaterButtons = document.querySelectorAll('.btn-read-later');
        const readLater = getReadLater();

        readLaterButtons.forEach(btn => {
            const articleId = btn.dataset.articleId;
            if (readLater.includes(parseInt(articleId))) {
                btn.classList.add('active');
                btn.querySelector('.read-later-text').textContent = "{{ 'Saved'|trans }}";
            } else {
                btn.classList.remove('active');
                btn.querySelector('.read-later-text').textContent = "{{ 'Read Later'|trans }}";
            }
        });
    }

    // Initialize likes on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateLikesDisplay();
        updateSavedCount();
    });
</script>
{% endblock %}
