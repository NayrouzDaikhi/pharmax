<script>
document.getElementById('commentForm').addEventListener('submit', async (e) => {
    
    const contentTextarea = document.getElementById('commentContent');
    const responseDiv = document.getElementById('commentResponse');
    const submitBtn = document.getElementById('submitBtn');
    const articleId = {{ article.id }};
    
    // Show loading state
    submitBtn.disabled = true;
    submitBtn.style.opacity = '0.6';
    submitBtn.textContent = '‚è≥ Posting...';
    responseDiv.style.display = 'none';
    
    try {
        const response = await fetch('/api/commentaires', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                contenu: contentTextarea.value,
                article_id: articleId,
                user_name: 'Customer',
                user_email: null
            })
        });
        
        const data = await response.json();
        
        // Reset form
        contentTextarea.value = '';
        
        // Display response
        responseDiv.style.display = 'block';
        
        if (response.ok && data.success) {
            // ‚úÖ Comment posted successfully
            responseDiv.style.backgroundColor = '#d4edda';
            responseDiv.style.borderLeft = '4px solid #28a745';
            responseDiv.style.color = '#155724';
            responseDiv.innerHTML = `
                <div style="font-weight: 700; margin-bottom: 5px;">
                    <i class="fas fa-check-circle"></i> Succes!
                </div>
                <div>${data.message}</div>
            `;
            
            // Update article statistics chart if available
            if (typeof window.updateArticleStatistics === 'function') {
                window.updateArticleStatistics();
            }
            
            // Reload page after 2 seconds to show new comment
            setTimeout(() => {
                location.reload();
            }, 2000);
        } else if (!response.ok || !data.success) {
            // ‚ùå Comment blocked
            responseDiv.style.backgroundColor = '#f8d7da';
            responseDiv.style.borderLeft = '4px solid #dc3545';
            responseDiv.style.color = '#721c24';
            responseDiv.innerHTML = `
                <div style="font-weight: 700; margin-bottom: 5px;">
                    <i class="fas fa-exclamation-circle"></i> Commentaire non publie
                </div>
                <div>${data.warning || data.message}</div>
            `;
            
            // Update article statistics chart immediately for blocked comments
            if (typeof window.updateArticleStatistics === 'function') {
                // Call immediately for blocked comments (don't need to reload page)
                window.updateArticleStatistics();
            }
        }
    } catch (error) {
        console.error('Error:', error);
        responseDiv.style.display = 'block';
        responseDiv.style.backgroundColor = '#f8d7da';
        responseDiv.style.borderLeft = '4px solid #dc3545';
        responseDiv.style.color = '#721c24';
        responseDiv.innerHTML = `
            <div style="font-weight: 700; margin-bottom: 5px;">
                <i class="fas fa-exclamation-circle"></i> Erreur
            </div>
            <div>Une erreur est survenue lors de la publication. Veuillez v√©rifier votre connexion et r√©essayer.</div>
        `;
    } finally {
        // Reset button
        submitBtn.disabled = false;
        submitBtn.style.opacity = '1';
        submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> {{'Post comment'|trans}}';
    }
});

// Handle smart comment deletion without page reload
document.querySelectorAll('.delete-blog-comment-btn').forEach(btn => {
    btn.addEventListener('click', async function(e) {
        e.stopPropagation();
        e.preventDefault();
        
        const commentId = this.dataset.commentId;
        
        if (!confirm('Are you sure you want to delete this comment?')) {
            return;
        }
        
        try {
            const response = await fetch(`/api/commentaires/${commentId}/delete`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            });
            
            if (response.ok) {
                const commentDiv = document.getElementById(`comment-${commentId}`);
                if (commentDiv) {
                    // Smooth fade out and remove
                    commentDiv.style.opacity = '0.5';
                    commentDiv.style.transition = 'opacity 0.3s ease';
                    setTimeout(() => {
                        commentDiv.style.opacity = '0';
                        setTimeout(() => {
                            commentDiv.remove();
                            
                            // Update comment count
                            const commentsSection = document.querySelector('h3 i.fa-comments');
                            if (commentsSection) {
                                const countSpan = commentsSection.parentElement;
                                const currentText = countSpan.textContent;
                                const match = currentText.match(/\((\d+)\)/);
                                if (match) {
                                    const currentCount = parseInt(match[1]);
                                    const newCount = Math.max(0, currentCount - 1);
                                    countSpan.innerHTML = countSpan.innerHTML.replace(/\(\d+\)/, `(${newCount})`);
                                }
                            }
                        }, 300);
                    }, 50);
                }
            } else {
                alert('Failed to delete comment');
            }
        } catch(err) {
            console.error('Delete failed:', err);
            alert('Error deleting comment');
        }
    });
});

// Language switch function
function switchLanguage(lang) {
    const frContent = document.getElementById('article-content-fr');
    const enContent = document.getElementById('article-content-en');
    const frBtn = document.getElementById('lang-fr-btn');
    const enBtn = document.getElementById('lang-en-btn');
    
    if (lang === 'fr') {
        frContent.style.display = 'block';
        if (enContent) enContent.style.display = 'none';
        if (frBtn) {
            frBtn.style.backgroundColor = '#5ea96b';
            frBtn.style.color = 'white';
        }
        if (enBtn) {
            enBtn.style.backgroundColor = '#d3d3d3';
            enBtn.style.color = '#333';
        }
        localStorage.setItem('articleLanguage', 'fr');
    } else if (lang === 'en') {
        if (frContent) frContent.style.display = 'none';
        if (enContent) enContent.style.display = 'block';
        if (frBtn) {
            frBtn.style.backgroundColor = '#d3d3d3';
            frBtn.style.color = '#333';
        }
        if (enBtn) {
            enBtn.style.backgroundColor = '#5ea96b';
            enBtn.style.color = 'white';
        }
        localStorage.setItem('articleLanguage', 'en');
    }
}

