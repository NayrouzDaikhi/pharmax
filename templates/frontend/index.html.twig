                {% endif %}
            </div>
            <small style="color: #999; display: block; margin-top: 10px;">
                <i class="fas fa-calendar"></i> {{ reclamation.dateCreation|date('d/m/Y H:i') }}
            </small>
        </div>
        <div class="reclamation-card-footer">
            <div class="btn-group">
                <a href="{{ path('frontend_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-sm btn-info">
                    <i class="fas fa-eye"></i> Voir
                </a>
                <a href="{{ path('frontend_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-sm btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <form method="POST" action="{{ path('frontend_reclamation_delete', {'id': reclamation.id}) }}" style="flex: 1;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                    <button type="submit" class="btn btn-sm btn-danger w-100" onclick="return confirm('√ätes-vous s√ªr?')">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% else %}
