{% extends 'frontend/base.html.twig' %}

{% block title %}Récapitulatif de commande - Pharmax{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">Récapitulatif de votre commande</h2>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Numéro de commande: #{{ commande.id }}</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-0">{{ commande.createdAt|date('d/m/Y à H:i') }}</p>
                </div>
            </div>

            <!-- Order Items -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Produits commandés</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Produit</th>
                                <th class="text-center">Prix unitaire</th>
                                <th class="text-center">Quantité</th>
                                <th class="text-right">Sous-total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ligne in commande.ligneCommandes %}
                                <tr>
                                    <td>{{ ligne.nom }}</td>
                                    <td class="text-center">{{ ligne.prix|number_format(2, ',', ' ') }} EUR</td>
                                    <td class="text-center">{{ ligne.quantite }}</td>
                                    <td class="text-right">{{ ligne.sousTotal|number_format(2, ',', ' ') }} EUR</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Delivery Info -->
            {% if commande.livraison %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Adresse de livraison</h5>
                    </div>
                    <div class="card-body">
                        <p>
                            <strong>{{ commande.livraison.firstName }} {{ commande.livraison.lastName }}</strong><br>
                            {{ commande.livraison.adresse }}<br>
                            {{ commande.livraison.codePostal }} {{ commande.livraison.ville }}<br>
                            {{ commande.livraison.pays }}
                        </p>
                        <p class="text-muted">
                            <strong>Téléphone:</strong> {{ commande.livraison.telephone }}<br>
                            <strong>Email:</strong> {{ commande.livraison.email }}
                        </p>
                    </div>
                </div>
            {% endif %}

            <!-- Total Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 offset-md-6">
                            <table class="table table-sm">
                                <tr>
                                    <th>Sous-total:</th>
                                    <td class="text-right">{{ commande.totales|number_format(2, ',', ' ') }} EUR</td>
                                </tr>
                                <tr>
                                    <th>Frais de port:</th>
                                    <td class="text-right">Gratuit</td>
                                </tr>
                                <tr style="border-top: 2px solid #ddd;">
                                    <th style="font-size: 1.1em;">Total à payer:</th>
                                    <td style="font-size: 1.1em; text-right; font-weight: bold; color: #28a745;">
                                        {{ commande.totales|number_format(2, ',', ' ') }} EUR
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Button -->
            <div class="card">
                <div class="card-body">
                    <form action="{{ path('app_payment_checkout', {'id': commande.id}) }}" method="POST" id="payment-form">
                        <input type="hidden" name="_token" value="{{ csrf_token('payment_checkout') }}">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_panier_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour au panier
                            </a>
                            <button type="submit" class="btn btn-success btn-lg" id="submit-payment">
                                <i class="fas fa-lock"></i> Procéder au paiement sécurisé
                            </button>
                        </div>
                    </form>

                    <div class="alert alert-info mt-3 mb-0">
                        <i class="fas fa-info-circle"></i>
                        <strong>Paiement sécurisé:</strong> Vous serez redirigé vers Stripe pour procéder au paiement en toute sécurité.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
