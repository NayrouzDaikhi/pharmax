{% extends 'frontend/base.html.twig' %}

{% block title %}Produits - Pharmax{% endblock %}

{% block content %}
<h1 class="mb-4">Nos Produits</h1>

{% if produits|length == 0 %}
<div class="alert alert-info">Aucun produit disponible pour le moment.</div>
{% else %}
<div class="row g-3">
    {% for produit in produits %}
    <div class="col-md-6 col-lg-4">
        <div class="card product-card h-100">
            {% if produit.image %}
            <img src="{{ asset('uploads/' ~ produit.image) }}" class="card-img-top" alt="{{ produit.nom }}" style="height: 200px; object-fit: cover;">
            {% else %}
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                <span class="text-muted">Pas d'image</span>
            </div>
            {% endif %}

            <div class="card-body">
                <span class="badge bg-secondary mb-2">{{ produit.categorie.nom }}</span>
                <h5 class="card-title">{{ produit.nom }}</h5>
                <p class="card-text small">{{ produit.description|length > 80 ? produit.description|slice(0, 80) ~ '...' : produit.description }}</p>
                
                <div class="mb-3">
                    <div class="product-price mb-2">{{ produit.prix|number_format(2, ',', ' ') }} DT</div>
                    {% if produit.dateExpiration %}
                    <small class="text-muted">Expire: {{ produit.dateExpiration|date('d/m/Y') }}</small>
                    {% endif %}
                </div>

                <div class="d-flex gap-2">
                    <a href="{{ path('app_panier_ajouter', {'id': produit.id}) }}" class="btn btn-primary btn-sm flex-fill">Ajouter</a>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-outline-secondary btn-sm">DÃ©tails</a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}
