{% extends 'base_simple.html.twig' %}

{% block title %}{{ isEdit ? 'Éditer Utilisateur' : 'Créer Utilisateur' }} - Pharmax{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">{{ isEdit ? 'Éditer Utilisateur' : 'Créer Nouvel Utilisateur' }}</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Tableau de bord</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_user_index') }}">Utilisateurs</a></li>
                <li class="breadcrumb-item active">{{ isEdit ? 'Éditer' : 'Créer' }}</li>
            </ol>
        </nav>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">{{ isEdit ? 'Éditer les Détails de l\'Utilisateur' : 'Ajouter un Nouvel Utilisateur' }}</h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.firstName, {
                            'attr': {'class': 'form-control', 'placeholder': 'Entrez le prénom'}
                        }) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.lastName, {
                            'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}
                        }) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_row(form.email, {
                        'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'adresse e-mail'}
                    }) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.password, isEdit ? 'Mot de passe (laisser vide pour garder le courant)' : 'Mot de passe') }}
                    {{ form_widget(form.password, {
                        'attr': {'class': 'form-control', 'placeholder': isEdit ? (canEditPassword ? 'Laisser vide pour garder le mot de passe actuel' : 'Password cannot be changed') : 'Entrez le mot de passe'}
                    }) }}
                    {% if not canEditPassword and isEdit %}
                        <small class="text-muted d-block mt-2">
                            <i class="bx bx-info-circle me-1"></i> Contact Super Admin to change password
                        </small>
                    {% endif %}
                    {% if form.password.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.password) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <label class="form-label">Rôles</label>
                    <div class="form-check">
                        {% for child in form.roles %}
                            <div>
                                {{ form_widget(child, {
                                    'attr': {'class': 'form-check-input'}
                                }) }}
                                {{ form_label(child, null, {
                                    'label_attr': {'class': 'form-check-label'}
                                }) }}
                            </div>
                        {% endfor %}
                    </div>
                    {% if not isSuperAdmin and isEdit %}
                        <small class="text-muted d-block mt-2">
                            <i class="bx bx-info-circle me-1"></i> Super Admin role cannot be assigned by normal admins
                        </small>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        {{ form_widget(form.isBlocked, {
                            'attr': {'class': 'form-check-input'}
                        }) }}
                        {{ form_label(form.isBlocked, null, {
                            'label_attr': {'class': 'form-check-label'}
                        }) }}
                    </div>
                </div>

                <div class="pt-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bx bx-save me-1"></i>
                        {{ isEdit ? 'Mettre à jour l\'Utilisateur' : 'Créer Utilisateur' }}
                    </button>
                    <a href="{% if isEdit %}{{ path('admin_user_show', {'id': user.id}) }}{% else %}{{ path('admin_user_index') }}{% endif %}" class="btn btn-secondary">
                        <i class="bx bx-times me-1"></i> Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Information</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    {% if isEdit %}
                        <strong>Remarque :</strong> Laissez le champ de mot de passe vide si vous ne souhaitez pas le modifier.
                    {% else %}
                        <strong>Créez un nouveau compte utilisateur</strong> avec les détails suivants.
                    {% endif %}
                </p>
                <hr />
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="bx bx-check text-success me-1"></i> L'e-mail doit être unique
                    </li>
                    <li class="mb-2">
                        <i class="bx bx-check text-success me-1"></i> Le mot de passe doit contenir au moins 6 caractères
                    </li>
                    <li class="mb-2">
                        <i class="bx bx-check text-success me-1"></i> Attribuez les rôles appropriés
                    </li>
                </ul>
                
                {% if isEdit and not isSuperAdmin %}
                    <hr />
                    <div class="alert alert-warning mb-0">
                        <small>
                            <i class="bx bx-lock-alt me-1"></i>
                            <strong>Permission Restrictions:</strong>
                            <ul class="list-unstyled my-2">
                                <li>✗ Cannot change password</li>
                                <li>✓ Can assign User and Admin roles</li>
                                <li>✗ Cannot assign Super Admin role</li>
                            </ul>
                            Contact Super Admin for password changes.
                        </small>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

</div>
{% endblock %}
