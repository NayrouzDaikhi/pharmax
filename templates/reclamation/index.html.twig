{% extends 'base.html.twig' %}

{% block title %}Reclamations{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <h4 class="py-3 mb-4">Reclamations</h4>
            <a href="{{ path('reclamation_new') }}" class="btn btn-primary mb-3">Nouvelle Reclamation</a>
        </div>
    </div>

    {% if reclamations %}
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Statut</th>
                        <th>Date Creation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    {% for reclamation in reclamations %}
                    <tr>
                        <td><strong>{{ reclamation.id }}</strong></td>
                        <td>{{ reclamation.titre }}</td>
                        <td><span class="badge bg-label-primary me-1">{{ reclamation.statut }}</span></td>
                        <td>{{ reclamation.dateCreation|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}" class="btn btn-sm btn-info">Voir</a>
                            
                            <form method="POST" action="{{ path('reclamation_delete', {'id': reclamation.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% else %}
    <div class="alert alert-info">Aucune reclamation trouvée.</div>
    {% endif %}
</div>
{% endblock %}
