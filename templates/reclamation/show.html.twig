{% extends 'base.html.twig' %}

{% block title %}Reclamations: {{ reclamation.titre }}{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">{{ reclamation.titre }}</h5>
                    <div>
                       
                        <form method="POST" action="{{ path('reclamation_delete', {'id': reclamation.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr?')">Supprimer</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>ID:</strong> {{ reclamation.id }}</p>
                            <p><strong>Statut:</strong> <span class="badge bg-label-primary">{{ reclamation.statut }}</span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Date de Création:</strong> {{ reclamation.dateCreation|date('d/m/Y H:i') }}</p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Description:</strong>
                        <p>{{ reclamation.description }}</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Reponses ({{ reclamation.reponses|length }})</h5>
                    <a href="{{ path('reponse_new', {'reclamationId': reclamation.id}) }}" class="btn btn-success btn-sm">Ajouter Reponse</a>
                </div>
                <div class="card-body">
                    {% if reclamation.reponses %}
                    <div class="table-responsive text-nowrap">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Contenu</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                {% for reponse in reclamation.reponses %}
                                <tr>
                                    {% set _content = reponse.contenu %}
                                    <td>{{ _content|length > 100 ? _content|slice(0, 100) ~ '...' : _content }}</td>
                                    <td>{{ reponse.dateReponse|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <form method="POST" action="{{ path('reponse_delete', {'id': reponse.id}) }}" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr?')">
                                                <i class="icon-base bx bx-trash me-1"></i> Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <p class="text-muted">Aucune reponse pour le moment.</p>
                    {% endif %}
                </div>
            </div>

            <div class="mt-3">
                <a href="{{ path('reclamation_index') }}" class="btn btn-secondary">Retour</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
