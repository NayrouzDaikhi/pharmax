{% extends 'front_base.html.twig' %}

{% block title %}{{ reclamation.titre }} - Pharmax{% endblock %}

{% block content %}
<section style="padding: 40px 0;">
    <div class="container-xxl">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <a href="{{ path('frontend_reclamation_index') }}" class="btn btn-outline-secondary mb-3">
                    <i class="bx bx-arrow-back"></i> Retour à la Liste
                </a>

                <div class="card" style="border-radius: 12px; border: 1px solid #e0e0e0;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h1 class="card-title fw-bold">{{ reclamation.titre }}</h1>
                                <small class="text-muted">
                                    <i class="bx bx-calendar"></i> Créée le {{ reclamation.dateCreation|date('d/m/Y à H:i') }}
                                </small>
                            </div>
                            <span class="badge 
                                {% if reclamation.statut == 'En attente' %}bg-warning
                                {% elseif reclamation.statut == 'En cours' %}bg-info
                                {% elseif reclamation.statut == 'Resolu' %}bg-success
                                {% else %}bg-secondary{% endif %}" style="font-size: 14px; padding: 8px 12px;">
                                {{ reclamation.statut }}
                            </span>
                        </div>

                        <div class="mb-4">
                            <h5 class="fw-bold mb-3">Description</h5>
                            <p style="white-space: pre-wrap; color: #555;">{{ reclamation.description }}</p>
                        </div>

                        {% if reclamation.reponses|length > 0 %}
                            <div class="border-top pt-4 mb-4">
                                <h5 class="fw-bold mb-3">
                                    <i class="bx bx-comment-detail"></i> Réponses ({{ reclamation.reponses|length }})
                                </h5>
                                
                                {% for reponse in reclamation.reponses %}
                                    <div class="card mb-3" style="border-left: 4px solid #27ae60; border-radius: 8px;">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <small class="text-muted">
                                                    <i class="bx bx-calendar"></i> {{ reponse.dateReponse|date('d/m/Y à H:i') }}
                                                </small>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Traduire cette réponse">
                                                        <i class="bx bx-globe"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li><a href="#" class="dropdown-item translate-response" data-lang="en" data-content="{{ reponse.contenu|escape('html') }}">English</a></li>
                                                        <li><a href="#" class="dropdown-item translate-response" data-lang="es" data-content="{{ reponse.contenu|escape('html') }}">Español</a></li>
                                                        <li><a href="#" class="dropdown-item translate-response" data-lang="de" data-content="{{ reponse.contenu|escape('html') }}">Deutsch</a></li>
                                                        <li><a href="#" class="dropdown-item translate-response" data-lang="it" data-content="{{ reponse.contenu|escape('html') }}">Italiano</a></li>
                                                        <li><a href="#" class="dropdown-item translate-response" data-lang="ar" data-content="{{ reponse.contenu|escape('html') }}">العربية</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="response-content-{{ loop.index0 }}" style="white-space: pre-wrap; color: #333; line-height: 1.6;">
                                                {{ reponse.contenu }}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}

                        <div class="d-flex gap-2 mt-4">
                            <a href="{{ path('frontend_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-primary">
                                <i class="bx bx-edit"></i> Éditer
                            </a>
                            <form method="POST" action="{{ path('frontend_reclamation_delete', {'id': reclamation.id}) }}" 
                                  style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bx bx-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
document.querySelectorAll('.translate-response').forEach((link, index) => {
    // Store the response index on the link
    link.dataset.responseIndex = Math.floor(index / 5);
    
    link.addEventListener('click', async (e) => {
        e.preventDefault();
        const lang = e.target.dataset.lang;
        const content = e.target.dataset.content;
        const responseIndex = e.target.dataset.responseIndex;
        
        if (!content) return;
        
        try {
            const response = await fetch('{{ path("app_translate") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    text: content,
                    target_lang: lang
                })
            });
            
            if (response.ok) {
                const data = await response.json();
                const responseContent = document.querySelector('.response-content-' + responseIndex);
                if (responseContent) {
                    responseContent.textContent = data.translated;
                }
            } else {
                alert('Erreur lors de la traduction');
            }
        } catch (error) {
            console.error('Erreur:', error);
            alert('Erreur lors de la traduction');
        }
    });
});
</script>
{% endblock %}
